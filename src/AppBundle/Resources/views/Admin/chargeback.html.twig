{% extends 'admin_claims_base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@AppBundle/Resources/public/js/Admin/month.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
<div class="container" style="margin-bottom: 50px">

<div class="row">
    <div class="col-md-5">
        <h1>
            {% if app.request.get('_route') == "admin_chargeback" %}
                Unassigned Chargebacks
            {% else %}
                Chargebacks for {{ month }} / {{ year }}
            {% endif %}
        </h1>
    </div>
    <form class="month-form form-inline" method="POST" autocomplete="off">
    <div class="col-md-3">
        <div class="form-group" style="padding-top: 15px;">
            <div class="input-group date month" data-url="{{ path('admin_chargeback') }}">
                <input name="charge" type='text' class="form-control" value="{{month}}-{{year}}" />
                <span class="input-group-addon">
                    <span class="fa fa-calendar"></span>
                </span>
            </div>
            <div class="input-group">
                <div class="input-group-btn">
                    <button class="btn btn-success"><i class="fa fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-1">
        <div class="form-group" style="padding-top: 15px;">
            <div class="btn-group">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#newChargebackModal"
                    > Add</button>
            </div>
        </div>
    </div>
    </form>
    <div class="col-md-3">
        <div class="form-group" style="padding-top: 15px;">
            <form action="https://portal.judopay.com/payments/history?SearchQueryType=1&AppName=&DeviceId=&From=&To=&AppId=0" method="GET">
                <input type="text" name="SearchQuery" placeholder="Last 4 digits" style="width: 100px;">
                <input type="hidden" name="SearchQueryType" value="1">
                <button type="submit" class="btn btn-success">Query Judo</button>
            </form>
        </div>
    </div>

</div>
    {% if chargebacks|length == 0 %}
    <div class="row-fluid">
        <h2>No chargeback items found</h2>
    </div>
    {% else %}
        <h3>Chargebacks</h3>
        {% for chargeback in chargebacks %}
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-md-2">
                    <strong>{{ chargeback.reference }}</strong>
                </div>
                <div class="col-md-2">
                    £{{ (0 - chargeback.amount)|number_format(2, '.', ',') }}
                </div>
                <div class="col-md-6">
                    {% if chargeback.policy %}
                        <a href="{{ path('admin_policy', {'id': chargeback.policy.id })}}">{{ chargeback.policy.policyNumber }}</a>
                    {% else %}
                        Unknown policy (assign via policy / admin tab)
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <div class="modal fade" id="newChargebackModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document" style="width: 60%;">
        <div class="modal-content">
        {{ form_start(chargeback_form) }}
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">New Chargeback</h4>
          </div>
          <div class="modal-body">
            <div class="row">
                <div class="form-group col-sm-2">
                    {{ form_label(chargeback_form.reference, 'Reference') }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_errors(chargeback_form.reference) }}
                    {{ form_widget(chargeback_form.reference) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-2">
                    {{ form_label(chargeback_form.amount, 'Amount') }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_errors(chargeback_form.amount) }}
                    {{ form_widget(chargeback_form.amount) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-2">
                    {{ form_label(chargeback_form.refundTotalCommission, 'Total Commission') }}<br>
                    £10.72 for annual or £0.89 / month 
                </div>
                <div class="form-group col-sm-6">
                    {{ form_errors(chargeback_form.refundTotalCommission) }}
                    {{ form_widget(chargeback_form.refundTotalCommission) }}<br>
                    (use positive number - system will adjust to refund)
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-2">
                    {{ form_label(chargeback_form.date, 'Date') }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_errors(chargeback_form.date) }}
                    {{ form_widget(chargeback_form.date) }}
                </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            {{ form_widget(chargeback_form.add, {'attr':{'class': 'btn btn-success'}}) }}
          </div>
        {{ form_end(chargeback_form) }}
        </div>
      </div>
    </div>

</div>
{% endblock %}
