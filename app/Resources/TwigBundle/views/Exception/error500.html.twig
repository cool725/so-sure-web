{% extends '::base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'error-page' %}

{% block title %}so-sure - Server Error{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/error.css') }}">
{% endblock %}

{% block body %}
    <section class="exception d-flex align-items-center text-center">
        <div class="container">
            <img class="logo" src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_broken-phone.png" alt="Unhappy so-sure" width="200px" class="d-block" />
            <h1 class="text-white">Sorry, computer says, no.</h1>
            <p class="text-white">It looks like there was a server error. Our engineers will investigate the problem, but in the meantime, try refreshing the page.</p>
        </div>
    </section>
{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/error.js') }}"></script>
{% endblock %}
