{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'enter-draw' %}
{% set robots_noindex = true %}
{% set small_footer = true %}

{% block title %}Entered | so-sure{% endblock %}

{# Set Meta #}
{% set og_title = 'We can both win £20, it’s super easy, check it out' %}
{% set og_description = "Check out so-sure to win £20 and benefit from their excellent perks: one month free, up to 80% cash back, etc. It’s super easy to enter!" %}
{% set og_image = cdn_url ~ '/images/rebrand/og/so-sure_og-amazon-voucher.jpg' %}

{% block cssPage %}
    {{ encore_entry_link_tags('competition-confirm') }}
{% endblock %}

{% block body %}

    <div class="competition">
        <div class="container-large">
            <div class="row">
                <div class="col-lg-7">
                    <div class="d-lg-flex align-items-lg-center pt-lg-5">
                        <img src="{{ cdn_url }}/images/onexone.png" data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_amazon-voucher.png" alt="Hand holding amazon voucher" width="180px" class="lozad d-none d-lg-inline mr-3">
                        <div class="mb-4">
                            <h1 class="fit mb-2 h3">Congrats, you’re in!  🎉 <br> <span class="sub">Get 1 month free on your mobile phone insurance if you pay yearly</span></h1>
                        </div>
                    </div>
                    <div class="d-none d-lg-block pr-lg-2">
                        <hr class="mb-5">
                        <div class="h4 text-primary">Increase your chance of winning</div>
                        <p>Share your personal link to increase your chances of winning a &pound;20 amazon voucher. Each time your friends see your personal referral page, you earn an extra entry in this month's draw! Each month we pick 10 customers win &pound;20!</p>
                        <div class="custom-input-with-btn mb-4">
                            <input id="user_code" name="code" readonly="readonly" type="text" class="form-control" value="{{ url('enter_draw_code', {'code': code}) }}">
                            <a href="#"
                               class="btn btn-outline-primary btn-sm btn-copy"
                               data-clipboard-target="#user_code">Copy</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    {% set answer_emoji = '😩' %}
                    {% if ans|length == 1 %}
                        {% set answer_emoji = '😐' %}
                    {% elseif ans|length == 2 %}
                        {% set answer_emoji = '🙂' %}
                    {% elseif ans|length == 3 %}
                        {% set answer_emoji = '🤩' %}
                    {% endif %}
                    <div class="cardbox cardbox-100 p-4 p-lg-5">
                        <h4 class="text-primary">Your score was <strong>{{ ans|length }}/3</strong> {{ answer_emoji }}</h4>
                        <p class="mb-0">As you can see, it pays to get your phone covered with so-sure. Get even more rewards with our sharing programme.</p>
                        <hr class="my-4">
                        <ul class="list-unstyled answer-list mb-5">
                             <li class="mb-4">
                                {% if users_answers.questions_form.questionOne == answers[0] %}
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x text-success"></i>
                                        <i class="fas fa-check fa-stack-1x fa-inverse"></i>
                                    </span>
                                    <span>Correct, <strong>1,222</strong> handsets are stolen every day in the UK? 👮‍♀</span>
                                {% else %}
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x text-link-water"></i>
                                        <i class="fas fa-times fa-stack-1x fa-inverse"></i>
                                    </span>
                                    <span>Nope, <strong>1,222</strong> handsets are stolen every day in the UK? 👮‍♀</span>
                                {% endif %}
                            </li>
                            <li class="mb-4">
                                {% if users_answers.questions_form.questionTwo == answers[1] %}
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x text-success"></i>
                                        <i class="fas fa-check fa-stack-1x fa-inverse"></i>
                                    </span>
                                    <span>Correct, <strong>1 in 4</strong> have broken their screen in the last 2 yrs 😱</span>
                                {% else %}
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x text-link-water"></i>
                                        <i class="fas fa-times fa-stack-1x fa-inverse"></i>
                                    </span>
                                    <span>Nope, <strong>1 in 4</strong> have broken their screen in the last 2 yrs 😱</span>
                                {% endif %}
                            </li>
                            <li>
                                {% if users_answers.questions_form.questionThree == answers[2] %}
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x text-success"></i>
                                        <i class="fas fa-check fa-stack-1x fa-inverse"></i>
                                    </span>
                                    <span> Correct, on average it costs <strong>&pound;250+</strong> to repair a top end phone 🤬</span>
                                {% else %}
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x text-link-water"></i>
                                        <i class="fas fa-times fa-stack-1x fa-inverse"></i>
                                    </span>
                                    <span>Nope, on average it costs <strong>&pound;250+</strong> to repair a top end phone 🤬</span>
                                {% endif %}
                            </li>
                        </ul>
                        <a href="#" class="btn btn-success btn-block get-a-quote disabled">Get a Quote</a>
                    </div>
                    <div class="d-lg-none">
                        <h2 class="h4 text-center mt-5">Increase your chance of winning <br><span class="sub">📨  Send invites = more entries</span></h2>
                        <img src="{{ cdn_url }}/images/onexone.png" data-src="{{ cdn_url }}/images/rebrand/invite/so-sure_hand_holding_amazon_voucher_mobile.png" alt="Hand holding amazon voucher" class="lozad img-fluid">
                        <div class="cardbox cardbox-100 text-center p-4 mb-4">
                            <h3 class="h4">Increase your chance of winning</h3>
                            <p>Share your personal link to increase your chances of winning a &pound;20 amazon voucher. Each time your friends see your personal referral page, you earn an extra entry in this month's draw! Each month we pick 10 customers win &pound;20!</p>
                            <a class="btn btn-outline-primary btn-block btn-copy"
                               data-clipboard-text="{{ url('enter_draw_code', {'code': code}) }}">🔗 Copy link</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsPage %}
    {{ encore_entry_script_tags('competition-confirm') }}
{% endblock %}
