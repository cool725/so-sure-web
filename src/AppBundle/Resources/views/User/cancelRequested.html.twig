{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'user-cancel' %}
{% set robots_noindex = true %}
{% set user_mode = true %}
{% set small_footer = true %}

{% block title %}Cancellation Requested | so-sure{% endblock %}
{% block meta %}{% endblock %}

{% block cssPage %}
    {{ encore_entry_link_tags('user') }}
    {{ encore_entry_link_tags('user-cancel') }}
{% endblock %}


{% block body %}

    <section class="hero">
        <div class="container-large">
            <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_broken-phone.png" class="img-center" alt="Broken phone logo" width="160px" />
            <h1 class="h2 mb-4">Cancel your policy</h1>
            <div class="cancel-text text-left">
                <p>Hi {{ policy.user.firstname }}, we have received your request and a member of the Policy Team will contact you within 1-2 working days so we can process the cancellation.</p>
                <p>If you require urgent assistance please contact us <a href="mailto:support@wearesosure.com" class="open-intercom">via intercom here</a> or email us at <a href="mailto:support@wearesosure.com">support@wearesosure.com</a>.</p>
            </div>
        </div>
    </section>

    {# Page Modal #}

{% endblock %}

{% block javascriptsPage %}
    {{ encore_entry_script_tags('user-cancel') }}
{% endblock %}
