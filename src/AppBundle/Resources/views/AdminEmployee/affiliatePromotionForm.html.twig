{% block body %}
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.promotion, 'Promotion') }}
            {{ form_widget(form.promotion, {'attr': {'class': 'form-control'}}) }}
            <div class="with-errors">{{ form_errors(form.promotion) }}</div>
        </div>
        <div class="form-group">
            {{ form_widget(form.next, {'attr': {'class': 'btn btn-success'}, 'label': 'Update Promotion'}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
