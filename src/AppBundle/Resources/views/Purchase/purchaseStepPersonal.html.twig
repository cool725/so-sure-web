{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    'components/eonasdan-bootstrap-datetimepicker/bootstrap-datetimepicker.min.css'
    '@AppBundle/Resources/public/css/Purchase/purchase.css'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/moment/moment.min.js'
    'components/eonasdan-bootstrap-datetimepicker/bootstrap-datetimepicker.min.js'
    '@AppBundle/Resources/public/js/Purchase/purchaseStepPersonal.js' %}
    %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="payment-container vertical-align-wrap">
        <div class="vertical-align-middle">
            <div class="desktop-page-title">
                <h1 class="section-title">Complete your policy</h1>
                <p class="section-description lead">Just enter the details below to setup your account.</p>
            </div>
            {% include 'AppBundle::Purchase/purchaseNav.html.twig' %}
            <div class="checkout-step">
                {{ form_start(purchase_form, {'attr': {'data-toggle': 'validator', 'class': 'form-horizontal'}}) }}
                <div class="row">
                    <div class="form-group {% if form_errors(purchase_form.email) %}has-error{% endif %}">
                        <div class="col-sm-4">
                            {{ form_label(purchase_form.email, 'Email') }}
                        </div>
                        <div class="col-sm-8">
                            {{ form_widget(purchase_form.email, {'attr':{'class':'form-control'}}) }}
                            <div class="help-block with-errors">{{ form_errors(purchase_form.email) }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group {% if form_errors(purchase_form.mobileNumber) %}has-error{% endif %}">
                        <div class="col-sm-4">
                            {{ form_label(purchase_form.mobileNumber, 'Mobile No.') }}
                        </div>
                        <div class="col-sm-8">
                            {{ form_widget(purchase_form.mobileNumber, {'attr':{'class':'form-control', 'pattern':'00447[1-9][0-9]{8,8}|[+]447[1-9][0-9]{8,8}|07[1-9][0-9]{8,8}', 'title': 'Enter a valid UK Mobile Number.'}}) }}
                            <div class="help-block with-errors">{{ form_errors(purchase_form.mobileNumber) }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group {% if form_errors(purchase_form.firstName) %}has-error{% endif %}">
                        <div class="col-sm-4">
                            {{ form_label(purchase_form.firstName, 'First Name') }}
                        </div>
                        <div class="col-sm-8">
                            {{ form_widget(purchase_form.firstName, {'attr':{'class':'form-control'}}) }}
                            <div class="help-block with-errors">{{ form_errors(purchase_form.firstName) }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group {% if form_errors(purchase_form.lastName) %}has-error{% endif %}">
                        <div class="col-sm-4">
                            {{ form_label(purchase_form.lastName, 'Last Name') }}
                        </div>
                        <div class="col-sm-8">
                            {{ form_widget(purchase_form.lastName, {'attr':{'class':'form-control'}}) }}
                            <div class="help-block with-errors">{{ form_errors(purchase_form.lastName) }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group {% if form_errors(purchase_form.birthday) %}has-error{% endif %}">
                        <div class="col-sm-4">
                            {{ form_label(purchase_form.birthday, 'Date of Birth') }}
                        </div>
                        <div class="col-sm-8">
                            <div class='input-group date' id='birthday'>
                                {{ form_widget(purchase_form.birthday, {'attr':{'class': 'form-control', 'placeholder':'DD/MM/YYYY'}}) }}
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="help-block with-errors">{{ form_errors(purchase_form.birthday) }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-12 text-center">
                        {{ form_widget(purchase_form.next, {'label': 'Continue to Billing Details', 'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                </div>
                {{ form_end(purchase_form) }}
            </div>
        </div>
    </div>
{% endblock %}
