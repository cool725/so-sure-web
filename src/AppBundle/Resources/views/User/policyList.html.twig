                                {% endif %}
                            {% endif %}
                            {% if policyItem.displayRepurchase %}
                                <a href="{{ path('user_repurchase_policy', {'id': policyItem.id }) }}" class="btn btn-success">Repurchase Policy</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

