{% extends '::base.html.twig' %}

{% block title %}so-sure - Server Error{% endblock %}

{% block body %}
  <div class="section hero">
    <div class="container text-center">
      <img class="logo" src="{{ cdn_url }}/images/logo/unhappy-so-sure-smiley.svg" alt="Unhappy so-sure smiley" style="width: 20%; margin-top: 50px;"></img>
      <h2 class="section-title">Server Error</h2>
      <p class="pre-launch-description">
