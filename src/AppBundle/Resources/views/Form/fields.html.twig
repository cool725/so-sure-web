{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        {% if multiple %}
            <div class="checkbox">
        {% else %}
            <div class="radio">
        {% endif %}

        {{ form_widget(child) }}
        </div>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block checkbox_widget %}
{% spaceless %}
{% if label is empty %}
    {% set label = name|humanize %}
{% endif %}
<div class="custom-control custom-checkbox">
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} class="custom-control-input" id="{{ id }}">
    <label id="{{ id }}_label" class="custom-control-label" for="{{ id }}">{% autoescape false %}{{ label|trans({}, translation_domain) }}{% endautoescape %}</label>
</div>
{% endspaceless %}
{% endblock checkbox_widget %}

{% block radio_widget %}
{% spaceless %}
{% if label is empty %}
    {% set label = name|humanize %}
{% endif %}
    <label  for="{{ id }}">
        <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} /> {{ label|trans({}, translation_domain) }}
    </label>
{% endspaceless %}
{% endblock radio_widget %}

{% block tel_widget %}
{% spaceless %}
    <input type="tel" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %} />
{% endspaceless %}
{% endblock tel_widget %}

{% block app_number_widget %}
{% spaceless %}
    <input type="number" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %} />
{% endspaceless %}
{% endblock app_number_widget %}

{% block file_widget %}
    {% spaceless %}
    <div class="custom-file">
        <input type="file" {{ block('widget_attributes') }} class="custom-file-input" id="{{ id }}">
        <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
    {% endspaceless %}
{% endblock file_widget %}
