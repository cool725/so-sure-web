{% extends 'AppBundle:Email:base.html.twig' %}
{% import "AppBundle:Email:macros.html.twig" as macros %}
{% block title %}Verify Policy IMEI Update{% endblock %}
{% block body %}
	{{ macros.start_table() }}
		<h1>
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		</h1>
		<div style="font-size: 14px; text-align: left;">
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		   <div style="font-size: 14px; text-align: center;"><font face="arial, helvetica neue, helvetica, sans-serif">
           Policy {{ policy.policyNumber }} has a new IMEI due to a claim being processes.  As the phone make/model may have changed,
           please verify that the new phone <strong>{{ daviesClaim.replacementMake }} {{ daviesClaim.replacementModel }}</strong> matches policy <strong>{{ policy.phone }}</strong>.
           If not, the policy can be updated via the <a href="{{ url('admin_policy', {'id': policy.id})}}">admin policy page</a>.
		   </div>
		</div>
	{{ macros.end_table() }}
	{{ macros.email_button_table(url('admin_policy', {'id': policy.id}), "View Policy", "View Policy")}}
{% endblock %}
