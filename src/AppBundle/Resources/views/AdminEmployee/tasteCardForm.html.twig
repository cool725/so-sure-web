{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="modal-body">
            <div class="container-fluid">
                <div class="form-row">
                    <h3>Update Taste Card</h3>
                    <div class="col-sm-8">{{ form_widget(form.number, {'attr': {'class': 'form-control', 'placeholder': 'New TasteCard Number'}}) }}</div>
                    {{ form_widget(form.update, {'attr': {'class': 'btn btn-danger col-sm-4'}, 'label': 'Update TasteCard'}) }}
                    {{ form_errors(form.number) }}

                    <div class="row" {% if policy.tasteCard == null %}hidden="hidden"{% endif %}>
                        {{ form_widget(form.resend, {'attr': {'class': 'btn btn-danger'}, 'label': 'Resend TasteCard Notification Email'}) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
