<div class="purchase-steps">
    <div class="purchase-step {% if step == 1 or step == 2 or step == 3 or step == 4 %}active{% endif  %}">
        <span class="sr-only">1</span>
    </div>
    <div class="purchase-step {% if step == 2 or step == 3 or step == 4 %}active{% endif  %}">
        <span class="sr-only">2</span>
    </div>
    <div class="purchase-step {% if step == 3 or step == 4 %}active{% endif  %}">
        <span class="sr-only">3</span>
    </div>
    <div class="purchase-step {% if step == 4 %}active{% endif  %}">
        <span class="sr-only">4</span>
    </div>
</div>
