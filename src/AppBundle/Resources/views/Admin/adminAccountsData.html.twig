                        [£{{ stats['accounts-avg-payments'] }} cached]
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td width="{{ indent_width }}"></td>
                <td>Number of Active Policies (as of end {{ month }} / {{ year }})</td>
                <td>
                    {{ activePolicies }}
                    {% if not print and stats['accounts-active-policies'] is defined %}
                        [{{ stats['accounts-active-policies'] }} cached]
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td width="{{ indent_width }}"></td>
                <td>Number of Active Policies w/Reward Pot Discount (as of end {{ month }} / {{ year }})</td>
