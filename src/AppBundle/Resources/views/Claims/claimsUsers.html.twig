{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    'bundles/app/css/Default/claimHandling.css'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}
<div class="container" id="claim-handling">
    <h2>Search</h2>
    <p><em>Tip: Only one of these fields is required to perform a search.</em></p>
    {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
    <div class="bg-info" style="border-radius: 4px; padding: 20px;">
      <div class="row">
        <div class="form-group col-sm-4">
            {{ form_label(form.lastname, 'Lastname') }}
            {{ form_errors(form.lastname) }}
            {{ form_widget(form.lastname) }}
        </div>
        <div class="form-group col-sm-4">
            {{ form_label(form.mobile, 'Mobile Number') }}
            {{ form_errors(form.mobile) }}
            {{ form_widget(form.mobile) }}
        </div>
        <div class="form-group col-sm-4">
            {{ form_label(form.email, 'Email') }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>
      </div>
      <div class="row">
        <div class="form-group col-sm-4">
            {{ form_label(form.postcode, 'Postcode') }}
            {{ form_errors(form.postcode) }}
            {{ form_widget(form.postcode) }}
        </div>
        <div class="form-group col-sm-4">
            {{ form_label(form.policy, 'Policy Number') }}
            {{ form_errors(form.policy) }}
            {{ form_widget(form.policy) }}
        </div>
        <div class="form-group col-sm-4">
            {{ form_label(form.status, 'Policy Status') }}
            {{ form_errors(form.status) }}
            {{ form_widget(form.status) }}
        </div>
      </div>
      <div class="row">
        <div class="form-group text-center col-sm-12" style="padding-top: 10px;">
            {{ form_widget(form.search, {'label': 'Search', 'attr': {'class': 'btn btn-primary'}}) }}
        </div>
      </div>
    </div>
    {{ form_end(form) }}
    <h2>Results</h2>
    <p>
      <em>Tip: Simply click on the policy number to view that person's details.</em>
    </p>
    {% if users.count == 0 %}
    <div class="row-fluid">
        <h2>No users found</h2>
    </div>
    {% else %}
    <div class="row-fluid">
        <div class="col-md-12">
          <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Policy Number</th>
                        <th>Policy Status</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% for policy in user.policies %}
                        <tr>
                            <td><a href="{{ path(policy_route, {id: policy.id}) }}">{{ policy.policyNumber }}</a></td>
                            <td>{{ policy.status }}</td>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.mobileNumber }}</td>
                        </tr>
                        {% endfor %}
                        {% if user.policies|length == 0 %}
                        <tr>
                            <td>N/A</td>
                            <td>N/A</td>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.mobileNumber }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
        </div>
      </div>
    </div>
    {% endif %}
    </form>

    {% if users.count > 0 %}
    <div class="pagerfanta text-center">
        {{ pagerfanta(pager, 'twitter_bootstrap3') }}
    </div>
    {% endif %}
    <div style="padding-bottom: 50px"></div>
</div>
{% endblock %}

        {% block javascripts %}
             {{ parent() }}
    {% javascripts
        '@AppBundle/Resources/public/js/Admin/phone.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
        {% endblock %}
