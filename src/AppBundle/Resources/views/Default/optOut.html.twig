{% extends 'base.html.twig' %}
{% block body %}
  <div class="section hero" style="min-height: 700px;">
    <div class="container text-center">
      <img class="logo" src="{{ cdn_url }}/images/logo/unhappy-so-sure-smiley.svg" alt="Unhappy so-sure smiley" style="width: 20%; margin-top: 50px;"></img>
      <h2 class="section-title">Sorry, you're leaving us</h2>
            <p>Enter your email below and we'll opt you out of future communications and invitations.</p>
            {{ form_start(form_optout) }}
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-4">
                    <div class="input-group">
                        {{ form_widget(form_optout.email, { 'attr': {'placeholder': 'Email Address', 'class': 'form-control'}}) }}
                        <span class="input-group-btn">
                            {{ form_widget(form_optout.decline, {'label': 'Opt out', 'attr': {'class': 'btn btn-danger'}}) }}
                        </span>
                    </div>
                    </div>
                </div>
            {{ form_end(form_optout) }}
    </div>
  </div>

{% endblock %}
