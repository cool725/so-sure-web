{% set include_emoji = 1 %}
{% extends 'base.html.twig' %}

{% block title %}so-sure -
    {{ phone }}{% endblock %}
{% block meta %}
    <meta name="description" content="For a small monthly fee your phone is covered for theft, loss, accidental damage and unauthorised usage."/>
    <meta name="keywords" content="mobile insurance, phone insurance, mobile phone insurance, cheap mobile phone insurance, cheap phone insurance, cheap mobile insurance, better phone insurance, better mobile phone insurance"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '@AppBundle/Resources/public/js/Default/index.js'
    '@AppBundle/Resources/public/js/Default/modalVideo.js'
 %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 
    'bundles/app/css/Default/index.css' 
    'bundles/app/css/Default/quotePhone.css' 
    'components/seiyria-bootstrap-slider/bootstrap-slider.min.css' 
    'bundles/app/css/Default/connections.css' 
    'bundles/app/css/Default/scrollindicator.css' 
    %}
    <link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}

    <section id="quote" class="quote-container section--pad">
        <div class="container">

            <div class="h1"><strong>Your quote for your {{ phone }}</strong></div>
            <p class="lead">Delivered to you quicker than you'll get it anywhere else - that's a promise.</p>
                
            <div class="quote-card">
                <div class="row">

                    <div class="col-md-6">
                        <span class="h4"><strong>Device</strong></span>
                        <p>
                            {{ phone }}
                            {% if phones | length > 1 %}
                                    <br>
                                    <small>or do you have:
                                        {% for phone_mem in phones if phone_mem.id != phone.id %}
                                            <a href="{{ path('quote_make_model_memory', {'make': phone_mem.make, 'model': phone_mem.encodedModel, 'memory': phone_mem.memory}) }}" class="btn btn-memory">{{ phone_mem.memory }}GB</a>
                                        {% endfor %}                   
                                    </small>             
                            {% endif %} 
                        </p>
                        <span class="h4"><strong>Covered for</strong></span>
                        <p>Theft, Loss, Accidental Damage &amp; Breakdown <br><a href="#" data-toggle="modal" data-target="#more-info"><small>More details (including excess)</small></a></p>
                        <span class="h1"><strong>£{{ phone_price.monthlyPremiumPrice }}</strong> <small>per month</small></span>
                    </div>

                    <div class="col-md-6">
                        <span class="h4"><strong>AND HERE’S THE COOL BIT…</strong></span>
                        <p>Insure and connect with friends to build a reward pot. At the end of the year, if no one claims, we’ll give you back:</p>
                        <div class="reward-pot"></div>
                    </div>

                </div>
                <div class="quote-card--footer"></div>
            </div>

        </div>
    </section>

