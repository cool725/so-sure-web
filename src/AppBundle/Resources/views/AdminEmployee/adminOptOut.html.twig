{% extends 'admin_claims_base.html.twig' %}

    {% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h2>so-sure Opt Outs</h2>
            </div>
            <div class="col-sm-4" style="padding-top:20px;">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addEmailModal"
                    ><i class="fa fa-envelope"></i></button>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addSmsModal"
                    ><i class="fa fa-phone"></i></button>
            </div>
        </div>

    {% if optouts|length == 0 %}
    <div class="row-fluid">
        <h2>No opt outs found</h2>
    </div>
    {% else %}
    <div class="row-fluid">
        <div class="col-md-11">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Category</th>
                        <th>Location</th>
                        <th>Date</th>
                        <th>Notes</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for optout in optouts %}
                        <tr>
                            <td>{% if optout.email is defined %}{{ optout.email }}{% endif %}</td>
                            <td>{% if optout.mobile is defined %}{{ optout.mobile }}{% endif %}</td>
                            <td>{{ optout.categories|json_encode }}</td>
                            <td>{{ optout.location }}</td>
                            <td>{{ optout.created|date }}</td>
                            <td>{{ optout.notes }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>

    <div class="modal fade" id="addEmailModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
            {{ form_start(email_form) }}
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Add Email OptOut</h4>
          </div>
          <div class="modal-body">
            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_label(email_form.email, 'Email') }}
                </div>
                <div class="form-group col-sm-4">
                    {{ form_errors(email_form.email) }}
                    {{ form_widget(email_form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_label(email_form.categories, 'Categories') }}
                </div>
                <div class="form-group col-sm-4">
                    {{ form_errors(email_form.categories) }}
                    {{ form_widget(email_form.categories) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_label(email_form.notes, 'Notes') }}
                </div>
                <div class="form-group col-sm-4">
                    {{ form_errors(email_form.notes) }}
                    {{ form_widget(email_form.notes) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group text-center col-sm-12" style="padding-top: 10px;">
                    {{ form_widget(email_form.update, {'label': 'Add OptOut', 'attr': {'class': 'btn btn-warning'}}) }}
                </div>
            </div>
          </div>
            {{ form_end(email_form) }}
        </div>
      </div>
    </div>

    <div class="modal fade" id="addSmsModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
        {{ form_start(sms_form) }}
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Add SMS OptOut</h4>
          </div>
          <div class="modal-body">
            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_label(sms_form.mobile, 'Mobile') }}
                </div>
                <div class="form-group col-sm-4">
                    {{ form_errors(sms_form.mobile) }}
                    {{ form_widget(sms_form.mobile) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_label(sms_form.categories, 'Categories') }}
                </div>
                <div class="form-group col-sm-4">
                    {{ form_errors(sms_form.categories) }}
                    {{ form_widget(sms_form.categories) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_label(sms_form.notes, 'Notes') }}
                </div>
                <div class="form-group col-sm-4">
                    {{ form_errors(sms_form.notes) }}
                    {{ form_widget(sms_form.notes) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group text-center col-sm-12" style="padding-top: 10px;">
                    {{ form_widget(sms_form.update, {'label': 'Add OptOut', 'attr': {'class': 'btn btn-warning'}}) }}
                </div>
            </div>
          </div>
          {{ form_end(sms_form) }}
        </div>
      </div>
    </div>
{% endblock %}
