{% if referral != '' %}
    {% set og_title = 'Join today & get rewarded' %}
    {% set og_image = cdn_url ~ '/images/so-sure-welcome.png' %}
{% endif %}
{% extends 'base.html.twig' %}

{% block title %}so-sure - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends don't claim. Download our app now to see how much you could save."/>
    <meta name="keywords" content="mobile phone insurance, social insurance"/>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    'bundles/app/css/Default/index.css'
    'bundles/app/css/Default/selectPhoneMake.css'
    'bundles/app/css/Default/scrollindicator.css'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    '@AppBundle/Resources/public/js/Default/index.js'
    '@AppBundle/Resources/public/js/Default/modalVideo.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMake.js'
 %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block body %}

    <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <section class="hero light-gradient">
                <div class="container">
                    <div class="row">
                      <div class="col-md-12">
                      <div class="col-md-6 text-left main-cta">
                        <h1>Welcome to better phone insurance</h1>
                        <p class="lead">
                          Finally, phone insurance that you can rely on (it's also up to 80% cheaper when you connect with friends &amp; don't claim).
                        </p>
                            <div class="explainer-video-thumb">
                                <a class="explainer-video-view-thumb" data-toggle="modal" data-target="#modal-fullscreen">
                                    <div class="explainer-video-frame-thumb">
                                        <div class="explainer-video-overlay"></div>
                                    </div>
                                    <p>
                                      How does so-sure work?
                                    </p>
                                </a>
                                <p>
                                </p>
                            </div>
                      </div>
                        <div class="col-md-6 main-cta">
                              <h3 class="text-center">Get a quote</h3>
                              <div class="panel panel-primary">
                                  <div class="panel-left">
                                      <div class="row">
                                        <div id="get-quote">
                                            {{ render(controller('AppBundle:Default:selectPhoneMake')) }}
                                      </div>
                                  </div>
                              </div>
                          </div>
                    </div>
                </div>
            </div>
        </div>
</section>

<section class="press banner">
    <div class="container">
        <div class="row">
