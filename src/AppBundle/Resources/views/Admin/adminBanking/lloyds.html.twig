{% if lloyds is defined and barclays is defined %}
<div class="row">
    <div class="col-md-6">
        <h3>Processing Date</h3>
        <table class="table table-striped mb-5">
            <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Barclays</th>
                    <th>Lloyds</th>
                    <th>Diff</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Month</td>
                    <td>&pound;{{ barclays['monthlyProcessed']|number_format(2, '.', ',') }}</td>
                    <td>&pound;{{ lloyds['monthlyProcessed']|number_format(2, '.', ',') }}</td>
                    <td>&pound;{{ (barclays['monthlyProcessed'] - lloyds['monthlyProcessed'])|number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td>Year</td>
                    <td>&pound;{{ barclays['yearlyProcessed']|number_format(2, '.', ',') }}</td>
                    <td>&pound;{{ lloyds['yearlyProcessed']|number_format(2, '.', ',') }}</td>
                    <td>&pound;{{ (barclays['yearlyProcessed'] - lloyds['yearlyProcessed'])|number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td>All time</td>
                    <td>&pound;{{ barclays['allProcessed']|number_format(2, '.', ',') }}</td>
                    <td>&pound;{{ lloyds['allProcessed']|number_format(2, '.', ',') }}</td>
                    <td>&pound;{{ (barclays['allProcessed'] - lloyds['allProcessed'])|number_format(2, '.', ',') }}</td>
                </tr>
            </tbody>
        </table>
        <h3>Processing Date</h3>
        <table class="table table-striped mb-5">
            <thead class="thead-light">
                <tr>
                    <th>Day of Month</th>
                    <th>Barclays</th>
                    <th>Lloyds</th>
                    <th>Diff</th>
                    <th>Cumulative Diff</th>
                </tr>
            </thead>
            <tbody>
                {% set cumulative = 0 %}
                {% for day,ymd in dates.ymd %}
                    {% set color = '' %}
                    {% if barclays['dailyProcessed'][ymd] is defined and lloyds['dailyProcessed'][ymd] is defined  %}
                        {% if equal_to_two_dp(barclays['dailyProcessed'][ymd], lloyds['dailyProcessed'][ymd]) %}
                            {% set color = 'table-success' %}
                        {% else %}
                            {% set color = 'table-danger' %}
                        {% endif %}
                    {% endif %}
                    <tr class='{{ color }}'>
                        <td>{{ day }}</td>
                        <td>{% if barclays['dailyProcessed'][ymd] is defined %}&pound;{{ barclays['dailyProcessed'][ymd]|number_format(2, '.', ',') }}{% else %}-{% endif %}</td>
                        <td>{% if lloyds['dailyProcessed'][ymd] is defined %}&pound;{{ lloyds['dailyProcessed'][ymd]|number_format(2, '.', ',') }}{% else %}-{% endif %}</td>
                        <td>{% if barclays['dailyProcessed'][ymd] is defined and lloyds['dailyProcessed'][ymd] is defined %}
                                {% set diff = barclays['dailyProcessed'][ymd] - lloyds['dailyProcessed'][ymd] %}
                                {% set cumulative = cumulative + diff %}
                                &pound;{{ diff|number_format(2, '.', ',') }}
                            {% elseif barclays['dailyProcessed'][ymd] is defined %}
                                {% set diff = barclays['dailyProcessed'][ymd] %}
                                {% set cumulative = cumulative + diff %}
                                &pound;{{ diff|number_format(2, '.', ',') }}
                            {% elseif lloyds['dailyProcessed'][ymd] is defined %}
                                {% set diff = 0 - lloyds['dailyProcessed'][ymd] %}
                                {% set cumulative = cumulative + diff %}
                                &pound;{{ diff|number_format(2, '.', ',') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{% if barclays['dailyProcessed'][ymd] is defined or lloyds['dailyProcessed'][ymd] is defined %}
                                &pound;{{ cumulative|number_format(2, '.', ',') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                {% for day,ymd in dates.next_ymd %}
                    {% set color = '' %}
                    {% if barclays['dailyProcessed'][ymd] is defined and lloyds['dailyProcessed'][ymd] is defined  %}
                        {% if equal_to_two_dp(barclays['dailyProcessed'][ymd], lloyds['dailyProcessed'][ymd]) %}
                            {% set color = 'table-success' %}
                        {% else %}
                            {% set color = 'table-danger' %}
                        {% endif %}
                    {% endif %}
                    <tr class='{{ color }}'>
                        <td>{{ day }}</td>
                        <td>{% if barclays['dailyProcessed'][ymd] is defined %}&pound;{{ barclays['dailyProcessed'][ymd]|number_format(2, '.', ',') }}{% else %}-{% endif %}</td>
                        <td>{% if lloyds['dailyProcessed'][ymd] is defined %}&pound;{{ lloyds['dailyProcessed'][ymd]|number_format(2, '.', ',') }}{% else %}-{% endif %}</td>
                        <td>{% if barclays['dailyProcessed'][ymd] is defined and lloyds['dailyProcessed'][ymd] is defined %}
                                {% set diff = barclays['dailyProcessed'][ymd] - lloyds['dailyProcessed'][ymd] %}
                                {% set cumulative = cumulative + diff %}
                                &pound;{{ diff|number_format(2, '.', ',') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{% if barclays['dailyProcessed'][ymd] is defined or lloyds['dailyProcessed'][ymd] is defined %}
                                &pound;{{ cumulative|number_format(2, '.', ',') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Received Date</h3>
        <table class="table table-striped mb-5">
            <thead class="thead-light">
                <tr>
                    <th></th>
                    <th>Lloyds</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Month</td>
                    <td>&pound;{{ lloyds['monthlyReceived']|number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td>Year</td>
                    <td>&pound;{{ lloyds['yearlyReceived']|number_format(2, '.', ',') }}</td>
                </tr>
                <tr>
                    <td>All time</td>
                    <td>&pound;{{ lloyds['allReceived']|number_format(2, '.', ',') }}</td>
                </tr>
            </tbody>
        </table>
        <h3>Received Date</h3>
        <table class="table table-striped mb-5">
            <thead class="thead-light">
                <tr>
                    <th>Day of Month</th>
                    <th>Lloyds</th>
                </tr>
            </thead>
            <tbody>
                {% for ymd in dates.ymd %}
                    <tr>
                        <td>{{ ymd|slice(6,2) }}</td>
                        <td>{% if lloyds['dailyReceived'][ymd] is defined %}&pound;{{ lloyds['dailyReceived'][ymd]|number_format(2, '.', ',') }}{% else %}-{% endif %}</td>
                    </tr>
                {% endfor %}
                {% for ymd in dates.next_ymd %}
                    <tr>
                        <td>{{ ymd|slice(6,2) }}</td>
                        <td>{% if lloyds['dailyReceived'][ymd] is defined %}&pound;{{ lloyds['dailyReceived'][ymd]|number_format(2, '.', ',') }}{% else %}-{% endif %}</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>
{% endif %}