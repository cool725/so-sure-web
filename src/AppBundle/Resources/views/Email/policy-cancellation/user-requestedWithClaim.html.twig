{% extends 'AppBundle:Email:base.html.twig' %}
{% import "AppBundle:Email:macros.html.twig" as macros %}
{% block title %}{{ policy.user.name }}, you still owe so-sure £{{ policy.getRemainderOfPolicyPrice|number_format(2, '.', ',') }}.{% endblock %}
{% block body %}
	{{ macros.start_table() }}
		<h1>
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		</h1>
		<div style="font-size: 14px; text-align: left;">
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		   <div style="font-size: 14px; text-align: center;"><span style="font-family:arial,helvetica neue,helvetica,sans-serif">
                Sorry that you're leaving us.  This email serves as official notice that your policy {{ policy.policyNumber }} is now cancelled and no longer in effect.
				 <br><br>
                However, as per the terms and conditions of your policy, as you've had a successful claim,
                you are liable for the remainder of the premium for your policy which is currently £{{ policy.getRemainderOfPolicyPrice|number_format(2, '.', ',') }}.
 				 <br><br>
                Please click the pay button below to pay the remainder of your outstanding balance.
 				 <br><br>                
 			   If you have any questions, please don't hesitate to
				<a href="mailto:support@wearesosure.com?subject=I%20have%20a%20question" target="_blank"><span style="color:#3399ff">contact us</span></a>.
		   </div>
		</div>
	{{ macros.end_table() }}
	{{ macros.email_button_table(url('purchase_remainder_policy', {'id': policy.id}), "Pay the remainder of your balance", "Pay the remainder of your balance")}}
{% endblock %}
