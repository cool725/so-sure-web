{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'invite' %}
{% set robots_noindex = true %}
{% set small_footer = true %}
{% set include_get_a_quote = true %}

{# Set Meta #}
{% block title %}1 Month FREE Phone Insurance thanks to {{ scode.policy.user.firstname }} | SO-SURE{% endblock %}
{% block meta %}
    <meta name="description" content="Check out SO-SURE to get 1 month free phone insurance immediately + excellent perks: low priced premium and excess, 2nd hand phone insurance, up to 80% cash back, and much more!"/>
{% endblock %}

{% set og_title = '1 Month FREE Phone Insurance thanks to ' ~ scode.policy.user.firstname %}
{% set og_description = 'Check out SO-SURE to get 1 month free phone insurance immediately + excellent perks: low priced premium and excess, 2nd hand phone insurance, up to 80% cash back, and much more!' %}
{% set og_image = cdn_url ~ '/images/rebrand/og/so-sure_og-referral.jpg' %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/invite.css') }}">
{% endblock %}

{% block body %}

    <section class="hero">
        <div class="container-large">
            <div class="row">
                <div class="col-sm-8 offset-sm-2 col-xl-6 offset-xl-0 order-xl-2">
                    <h1 class="text-white mb-4">
                        Get SO-SURE perks, <br />
                        <span class="text-deep-sky-blue-d">with {{ scode.policy.user.firstname }}!</span>
                    </h1>
                    <ul class="list-unstyled icn-fa-list mb-4">
                        <li class="mb-3 lead text-white">
                            <i class="far fa-check fa-lg fa-fw text-deep-sky-blue-d"></i>
                            Sign up for simple, reasonable and hassle-free phone insurance!
                        </li>
                        <li class="mb-3 lead text-white">
                            <i class="far fa-check fa-lg fa-fw text-deep-sky-blue-d"></i>
                            Receive <strong>£10</strong> in your no claims <strong>cashback pot</strong>
                        </li>
                        <li class="lead text-white">
                            <i class="far fa-check fa-lg fa-fw text-deep-sky-blue-d"></i>
                            Get one month FREE just click "Get a quote" below!
                        </li>
                    </ul>
                    <a href="#"
                       class="btn btn-success mb-4 get-a-quote disabled btn-block-xs mr-sm-2">
                       Get a quote
                    </a>
                    <p class="text-white">Is your phone already covered with SO-SURE? <a href="{{ path('fos_user_security_login') }}" class="text-white"><u>Login</u></a> to connect with {{ scode.policy.user.firstname }} and claim your connection bonus.</p>
                </div>
                <div class="col-sm-8 offset-sm-2 col-xl-6 offset-xl-0 order-xl-1">
                    <div class="hero-image">
                        <picture class="lozad">
                            <source srcset="{{ cdn_url }}/images/rebrand/hero-images/so-sure_hero_image_desktop_large_invite.png" media="(min-width: 1200px)">
                            <source srcset="{{ cdn_url }}/images/rebrand/hero-images/so-sure_hero_image_desktop_invite.png" media="(min-width: 992px) and (max-width: 1199px)">
                            <source srcset="{{ cdn_url }}/images/rebrand/hero-images/so-sure_hero_image_mobile_invite.png" media="(min-width: 320px) and (max-width: 991px)">
                        </picture>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Cred #}
    {% include 'AppBundle::Default/CommonSections/_cred.html.twig' %}

    <section class="how-it-works py-lg-5">
        <div class="container-large py-5">
            <h2 class="h3 mb-3 text-primary">How to get your free months</h2>
            <p class="mb-5 lead">We know <strong>{{ scode.policy.user.firstname }}</strong> referred you to us - so as a thank you, we'll give you a month off your phone insurance!<br class="d-none d-lg-inline"> We'll also give you an extra free {{ free_months }} if you pay annually.</p>
            <div class="timeline d-lg-none mb-3">
                <div class="timeline-block timeline-block-complete">
                    <div class="timeline-point"><i class="far fa-check fa-lg fa-fw text-white"></i></div>
                    <div class="timeline-content">
                        <h3 class="h5 text-primary">Sign up and enter {{ scode.policy.user.firstname }}'s referral code at purchase</h3>
                    </div>
                </div>
                <div class="timeline-block timeline-block-complete">
                    <div class="timeline-point"><i class="far fa-check fa-lg fa-fw text-white"></i></div>
                    <div class="timeline-content">
                        <h3 class="h5 text-primary">Your second month will be completely free!</h3>
                    </div>
                </div>
                <div class="timeline-block timeline-block-complete">
                    <div class="timeline-point"><i class="far fa-check fa-lg fa-fw text-white"></i></div>
                    <div class="timeline-content">
                        <h3 class="h5 text-primary">If you pay annually, you’ll get another {{ free_months }} free!</h3>
                    </div>
                </div>
            </div>
            <div class="d-none d-lg-block mb-5">
                <div class="row">
                    <div class="col-4 step">
                        <img src="{{ cdn_url }}/images/onexone.png" data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_connect.png" alt="Connect app" width="180px" class="lozad mb-3">
                        <h3 class="h5 text-primary mb-2">Sign up and enter {{ scode.policy.user.firstname }}'s referral code at purchase</h3>
                    </div>
                    <div class="col-4 step">
                        <img src="{{ cdn_url }}/images/onexone.png" data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_wallet-cashback.png" alt="Wallet" width="180px" class="lozad mb-3">
                        <h3 class="h5 text-primary mb-2">Your second month will be completely free!</h3>
                    </div>
                    <div class="col-4 step">
                        <img src="{{ cdn_url }}/images/onexone.png" data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_friends-connect.png" alt="Friends having fun" width="180px" class="lozad mb-3">
                        <h3 class="h5 text-primary mb-2">If you pay annually, you’ll get another {{ free_months }} free!</h3>
                    </div>
                </div>
            </div>
            <div class="d-sm-flex justify-content-sm-center">
                <a href="#"
                   class="btn btn-success btn-block-xs get-a-quote disabled order-md-2">
                   Get a Quote</a>
            </div>
        </div>
    </section>

    <section class="video d-flex align-items-center justify-content-center">
        <a href="#"
           data-toggle="modal"
           data-target="#sosure-video-modal"
           data-src="https://www.youtube.com/embed/rF6zxVRT5Fc"
           class="watch-video video__play">
            <img src="{{ cdn_url }}/images/onexone.png"
                 data-src="{{ cdn_url }}/images/rebrand/invite/so-sure_invite_reward_video_play_shadow.svg"
                 alt="Play buttonn"
                 class="lozad"
                 width="120px"></a>
        <img src="{{ cdn_url }}/images/onexone.png"
             data-src="{{ cdn_url }}/images/rebrand/video/so-sure_video_background_woman_swoosh.png"
             alt="Woman polaroid swoosh"
             class="lozad video-img">
    </section>

    <section id="knowledge_base" class="knowledge-base pb-lg-5">
        <div class="container pb-5">
            {% include 'AppBundle::Components/_knowledgeBase.html.twig' %}
        </div>
    </section>

    {# Reviews #}
    {% include 'AppBundle::PhoneInsurance/CommonSections/_reviewsB.html.twig' %}  

    <section class="banner py-5">
        <div class="container-large">
            <div class="d-lg-flex justify-content-lg-between align-items-lg-center">
                <div class="mb-4 mb-lg-0 d-lg-flex align-items-lg-center">
                    <img data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_app-icn.svg" class="d-none d-lg-inline mt-lg-2 lozad" alt="so-sure App Icon">
                    <div class="banner__text text-center text-lg-left ml-lg-4">
                        <h2 class="h4 text-white mb-0">Want to know more about so-sure mobile insurance?</h2>
                    </div>
                </div>
                <div class="banner__controls text-center text-lg-left">
                    <a href="{{ path('phone_insurance') }}" class="btn btn-success btn-block-xs">Find out more</a>
                </div>
            </div>
        </div>
    </section>

    {# Page Modals #}

{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/invite.js') }}"></script>
{% endblock %}
