    {# Instant Quote #}
    <section class="homepage--instant-quote">
        <div class="container">
            <h2 class="text-center h1">Get your instant quote</h2>
            {# Phone Search #}
            {% if phone is defined and phone %}
                {{ render(controller('AppBundle:Default:selectPhoneMakeSearch', {
                    'type': 'footer',
                    'id': phone.id
                })) }}
            {% else %}
                {{ render(controller('AppBundle:Default:selectPhoneMakeSearch', {
