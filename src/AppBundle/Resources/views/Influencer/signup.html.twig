{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set instore_mode = true %}
{% set robots_noindex = true %}

{% block title %}Influencer Signup | SO-SURE{% endblock %}
{% block meta %}{% endblock %}
{% block schema %}{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/signup.css') }}">
{% endblock %}

{% block body %}

    <section class="page-contents">
        <div class="container-large">
            <h1 class="h2 mb-4">Signup</h1>
            <p>Please fill in your details correctly to get your unique referral link.</p>
            {{ form_start(influencerForm, {'attr':{
                'data-toggle': 'validator',
                'class': 'validate-form ',
                'data-client-validation': form_client_validation,
                'autocomplete': 'off'
            }}) }}
                <div class="form-group">
                    {{ form_label(influencerForm.firstName, 'First Name') }}
                    {{ form_widget(influencerForm.firstName, {'attr': {'class': 'form-control'}}) }}
                    <div class="with-errors">{{ form_errors(influencerForm.firstName) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(influencerForm.lastName, 'Last Name') }}
                    {{ form_widget(influencerForm.lastName, {'attr': {'class': 'form-control'}}) }}
                    <div class="with-errors">{{ form_errors(influencerForm.lastName) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(influencerForm.email, 'Email') }}
                    {{ form_widget(influencerForm.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="with-errors">{{ form_errors(influencerForm.email) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(influencerForm.gender, 'Gender') }}
                    {{ form_widget(influencerForm.gender, {'attr': {'class': 'form-control'}}) }}
                    <div class="with-errors">{{ form_errors(influencerForm.gender) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(influencerForm.organisation, 'Organisation') }}
                    {{ form_widget(influencerForm.organisation, {'attr': {'class': 'form-control'}}) }}
                    <div class="with-errors">{{ form_errors(influencerForm.organisation) }}</div>
                </div>
                <div class="form-group text-center mt-4">
                    {{ form_widget(influencerForm.next, {'label': 'Continue', 'attr': {'class': 'btn btn-success'}}) }}
                </div>
            {{ form_end(influencerForm) }}
        </div>
    </section>

{% endblock %}

{% block javascriptsPage %}
     <script src="{{ asset('css-js/signup.js') }}"></script>
{% endblock %}