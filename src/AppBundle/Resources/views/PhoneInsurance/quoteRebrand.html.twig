{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'quote' %}
{% set quote_mode = 1 %}

{% block title %}{{ phone.model }} Insurance - {{ phone.make }} - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends and don't claim. Download our app now to see how much you could save."/>
    <meta name="description" content="For a small monthly fee your phone is covered for theft, loss, accidental damage and unauthorised usage."/>
    <link rel="canonical" href="{{ url('quote_make_model', {'make': phone.makeCanonical, 'model': phone.encodedModelCanonical}) }}" />
{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/quotepage.css') }}">
{% endblock %}

{% block body %}

    <section class="quote">
        <div class="d-lg-flex">

            <div class="quote__details__container">
                <div class="quote__details px-lg-5">
                    <div class="text-white mb-4 h5">Here’s your quote details, Insure your:</div>
                    <h1 class="text-blue1 mb-2">
                        <span class="sub">
                            {{ phone.make }} {{ phone.model }}
                            <small>({{ phone.memory }}GB)</small>
                        </span>
                    </h1>
                    <div class="text-white h1 mb-4"><span class="sub">For only</span> &pound;{{ phone_price.monthlyPremiumPrice }} a month</div>
                    {{ form_start(buy_form) }}
                        {{ form_widget(buy_form.buy_tablet, {
                            'label': 'Get Started',
                            'attr': {
                                'class': 'btn btn-success btn-shadow btn-gradient-green'
                            }})
                        }}
                    {{ form_end(buy_form) }}
                    <div class="quote__footer d-lg-flex justify-content-lg-between align-items-lg-center mt-5">
                        <div class="quote__footer__text">
                            <h5 class="text-white">The higest level of cover!</h5>
                            <p class="text-blue1">We offer the markets highest level of cover</p>
                        </div>
                        <a id="quote_info_toggle" href="#quote_info" class="btn btn-outline-white"><span>See full policy</span> <i class="fas fa-caret-down"></i></a>
                    </div>
                </div>
                <div class="quote__info mx-lg-5 py-5 mt-5">
                    <div class="h1 text-white">{{ phone.make }} {{ phone.model }}
                            <small>({{ phone.memory }}GB)</small></div>
                    <div class="h1 text-blue1 mb-5">Full Cover Details</div>
                    <h4 class="text-blue1 mb-4">What's covered:</h4>
                    <ul class="list-unstyled icn-fa-list">
                        <li class="text-white mb-3"><i class="fas fa-check text-blue1 fa-lg"></i> Loss</li>
                        <li class="text-white mb-3"><i class="fas fa-check text-blue1 fa-lg"></i> Accidental Damage, including water damage &amp; cracked screens</li>
                        <li class="text-white mb-3"><i class="fas fa-check text-blue1 fa-lg"></i> 90 days global travel</li>
                        <li class="text-white mb-3"><i class="fas fa-check text-blue1 fa-lg"></i> Out of warranty breakdown</li>
                        <li class="text-white mb-3"><i class="fas fa-check text-blue1 fa-lg"></i> Unauthorised network charges up the value of £1000 (inc VAT)</li>
                        <li class="text-white mb-3"><i class="fas fa-check text-blue1 fa-lg"></i> Accessories up to the value of £100 (inc VAT) for theft of loss claims</li>
                        <li class="text-white mb-5"><i class="fas fa-check text-blue1 fa-lg"></i> Cover for phones up to 3 years old, including second hand and refurbished devices</li>
                    </ul>
                    <h4 class="text-blue1 my-4">What's not covered:</h4>
                    <ul class="list-unstyled icn-fa-list">
                        <li class="text-white mb-3"><i class="fas fa-times text-blue1 fa-lg"></i> Theft, Loss, Accidental Damage or Breakdown where you have knowingly put your phone at risk</li>
                        <li class="text-white mb-3"><i class="fas fa-times text-blue1 fa-lg"></i> 3+ claims for Loss and/or Theft in any policy year</li>
                    </ul>
                </div>
                <div class="quote__info mx-lg-5 py-5 mt-5">
                    <h4 class="text-blue1 mb-4">Here’s how we compare to competitors:</h4>
                </div>
                <div class="quote__info mx-lg-5 py-5 mt-5">
                    <h4 class="text-blue1 mb-4">Here’s how we compare to other insurers:</h4>
                </div>
            </div>

            <div class="quote__cover p-5">
                <h4 class="text-blue2 mb-4">Cover Overview:</h4>
                <ul class="list-unstyled icn-list">
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_accidental-damage-icn.svg" alt="so-sure - Accidental damage" width="30px" class="mr-2">
                        <strong class="text-blue4">Cracked screens</strong>
                    </li>
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_theft-loss-icn.svg" alt="so-sure - Theft or loss" width="30px" class="mr-2">
                        <strong class="text-blue4">Theft or loss</strong>
                    </li>
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_broken-phone-icn.svg" alt="so-sure - Water damage" width="30px" class="mr-2">
                        <strong class="text-blue4">Water damage</strong>
                    </li>
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_travel-icn.svg" alt="so-sure - Travel Cover" width="30px" class="mr-2">
                        <strong class="text-blue4">International travel</strong>
                    </li>
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_out-of-warranty-icn.svg" alt="so-sure - Out of Warranty Breakdown" width="30px" class="mr-2">
                        <strong class="text-blue4">Out-of-warranty breakdowns</strong>
                    </li>
                    <li class="mb-5">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_broken-phone-icn.svg" alt="so-sure - Broken headphone jack" width="30px" class="mr-2">
                        <strong class="text-blue4">Broken headphone jack</strong>
                    </li>
                </ul>
                <h4 class="text-blue2 my-4">We also offer:</h4>
                <ul class="list-unstyled icn-list">
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_happy-icn-min.svg" alt="so-sure - Accidental damage" width="30px" class="mr-2">
                        <strong class="text-blue4">24-72 hour replacement <span class="ml-2 text-blue2"><i class="far fa-question-circle"></i></span></strong>
                    </li>
                    <li class="mb-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_happy-icn-min.svg" alt="so-sure - Accidental damage" width="30px" class="mr-2">
                        <strong class="text-blue4">Instant cover after purchase</strong>
                    </li>
                    <li class="my-4">
                        <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_happy-icn-min.svg" alt="so-sure - Accidental damage" width="30px" class="mr-2">
                        <strong class="text-blue4">Up to 80% cashback every year <span class="ml-2 text-blue2"><i class="far fa-question-circle"></i></span></strong>
                    </li>
                </ul>
                {{ form_start(buy_form_banner) }}
                    {{ form_widget(buy_form_banner.buy, {
                        'label': 'Get Started',
                        'attr': {
                            'class': 'btn btn-success btn-shadow btn-gradient-green'
                        }})
                    }}
                {{ form_end(buy_form_banner) }}
            </div>

        </div>
    </section>

{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/quotepage.js') }}"></script>
{% endblock %}
