<div class="modal modal-middle modal-phone fade"
     id="quoteModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="quoteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="text-center">Find your phone</h3>
            </div>
            <div class="modal-body">

                {# Phone Search #}
                {% if useDropdownSearch is defined and useDropdownSearch and device_category() == 'Mobile' %}
                    {% set select_template = 'AppBundle:Default:selectPhoneMakeDropdown' %}
                {% else %}
                    {% set select_template = 'AppBundle:Default:selectPhoneMakeSearch' %}
                {% endif %}

                {% if selectPhoneMakeType is defined and selectPhoneMakeType and phoneId is defined and phoneId %}
                    {{ render(controller(select_template, {
                        'type': selectPhoneMakeType,
                        'id': phone.id
                    }|merge(app.request.query.all))) }}
                {% elseif selectPhoneMakeType is defined and selectPhoneMakeType %}
                    {{ render(controller(select_template, {
                        'type': selectPhoneMakeType
                    }|merge(app.request.query.all))) }}
                {% else %}
                    {{ render(controller(select_template)) }}
                {% endif %}
                {# End Phone Search #}

                {% if selectPhoneMakeType is defined and selectPhoneMakeType == 'purchase-change' %}
                    <br><br>
                {% else %}
                    <h4 class="text-blue text-center hidden-xs">Popular models we insure:</h4>
                    <ul class="list-inline text-center modal-phone--link-list hidden-xs">
                        <li>
                            <h5>Galaxy S8</h5>
                            <a href="{{ path('quote_make_model_memory', {'make':'samsung','model':'galaxy s8','memory': 64}) }}">
                                <img src="{{ cdn_url }}/images/library_phones/Samsung/Galaxy-S8.png" alt="Samsung - Galaxy S8">
                            </a>
                        </li>
                        <li>
                            <h5>iPhone 7</h5>
                            <a href="{{ path('quote_make_model_memory', {'make':'apple','model':'iphone 7','memory': 32}) }}">
                                <img src="{{ cdn_url }}/images/library_phones/Apple/iPhone-7.png" alt="Apple - iPhone 7">
                            </a>
                        </li>
                        <li>
                            <h5>OnePlus 5</h5>
                            <a href="{{ path('quote_make_model_memory', {'make':'oneplus','model':'5','memory': 64}) }}">
                                <img src="{{ cdn_url }}/images/library_phones/OnePlus/5.png" alt="OnePlus - 5">
                            </a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
</div>
