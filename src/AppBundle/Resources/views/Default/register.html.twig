{% extends 'base.html.twig' %}

{% block title %}so-sure - Register{% endblock %}
{% block meta %}
  <meta name="description" content="Welcome to the Social Insurance Revolution."/>
  <meta name="keywords" content="mobile insurance, phone insurance, mobile phone insurance, cheap mobile phone insurance, cheap phone insurance, cheap mobile insurance, better phone insurance, better mobile phone insurance" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@AppBundle/Resources/public/css/Purchase/checkout.css' %}
    <link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}
<section class="vertical-align-wrap">
    <div class="vertical-align-middle">
        <div class="container checkout">

            <h1>Create your account</h1>
            <p class="lead">Choose an option to create your so-sure account below.</p>        

            <div class="row">
                <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">

                    <div class="checkout--step">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        
                            <div class="form-group {% if form_errors(form.email) %}has-error{% endif %}">
                                {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'control-label col-sm-3'} }) }}
                                <div class="col-sm-8">
                                    {{ form_widget(form.email, {'attr':{'class':'form-control', 'placeholder':'e.g. jane.smith@gmail.com'}}) }}
                                    <div class="help-block with-errors">{{ form_errors(form.email) }}</div>
                                </div>                                
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12 text-center">
                                    {{ form_widget(form.register, {'label': 'Create account', 'attr': {'class': 'btn btn-primary '}}) }}
                                </div>
                            </div>                            

                        {{ form_end(form) }}
                    </div>                        
<!-- 
                    <div class="text-break">
                        <div class="line"></div>OR<div class="line"></div>
                    </div>            
            
                    {% include 'AppBundle::Purchase/purchaseDownload.html.twig' %} -->

                </div>
            </div>
        
        </div>
    </div>
</section>
{% endblock %}
