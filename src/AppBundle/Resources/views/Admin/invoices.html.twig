{% extends 'admin_claims_base.html.twig' %}

{% block body %}
<div class="container" style="margin-bottom: 50px">

<div class="row">
    <div class="col-md-6">
        <h1>so-sure Invoices</h1>
    </div>
</div>
    {% if invoices|length == 0 %}
    <div class="row-fluid">
        <h2>No invoices found</h2>
    </div>
    {% else %}
    <div class="row">
        <div class="col-md-11">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Number</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Downloads</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for invoice in invoices %}
                        <tr>
                            <td>{{ invoice.invoiceNumber }}</td>
                            <td>{{ invoice.name }}</td>
                            <td>{{ invoice.date|date }}</td>
                            <td>Â£{{ invoice.total|number_format(2, '.', ',') }}</td>
                            <td>
                                {% for file in invoice.invoiceFiles %}
                                    <a href="{{ s3DownloadLink(file.bucket, file.key) }}">{{ file.filename }}</a>
                                {% endfor %}
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
