{% extends 'base.html.twig' %}

{% block title %}so-sure - Register{% endblock %}
{% block meta %}
  <meta name="description" content="Welcome to the Social Insurance Revolution."/>
  <meta name="keywords" content="mobile insurance, phone insurance, mobile phone insurance, cheap mobile phone insurance, cheap phone insurance, cheap mobile insurance, better phone insurance, better mobile phone insurance" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@AppBundle/Resources/public/css/Default/register.css'
    %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}
  <section class="register vertical-align-wrap">
    <div class="vertical-align-middle">
      <h1 class="section-title">Create your account</h1>
      <p class="section-description">Just enter your details below to setup your account.</p>
      <div class="checkout-step">
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group{% if form_errors(form.email) %}has-error{% endif %}">
                <div class="col-sm-3">
                {{ form_label(form.email, 'Email') }}
                </div>
                <div class="col-sm-9">
                {{ form_widget(form.email, {'attr':{'class':'form-control', 'placeholder':'e.g. jane.smith@gmail.com'}}) }}
                <div class="help-block with-errors">{{ form_errors(form.email) }}</div>
                </div>
            </div>
            <div class="form-group{% if form_errors(form.mobileNumber) %}has-error{% endif %}">
              <div class="col-sm-3">
                {{ form_label(form.mobileNumber, 'Mobile') }}
              </div>
                <div class="col-sm-9">
                {{ form_widget(form.mobileNumber, {'attr':{'class':'form-control', 'pattern':'00447[1-9][0-9]{8,8}|[+]447[1-9][0-9]{8,8}|07[1-9][0-9]{8,8}', 'title': 'Enter a valid UK Mobile Number', 'placeholder':'e.g. +447700 111 222'}}) }}
                <div class="help-block with-errors">{{ form_errors(form.mobileNumber) }}</div>
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(form.register, {'label': 'Create account', 'attr': {'class': 'btn btn-primary btn-rounded'}}) }}
            </div>
          {{ form_end(form) }}
      </div>
    </div>
  </section>
{% endblock %}
