                            {% for week in weeks %}
                                <td>{% if week['kpi-picsure-invalid-policies'] is defined %}{{ week['kpi-picsure-invalid-policies'] }}{% else %}-{% endif %}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Total # pic-sure approved policies [KPI: 146]</td>
                            {% for week in weeks %}
                                <td>{{ week['kpi-picsure-approved-policies'] }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Total # pic-sure pre-approved (renewals) policies [KPI: 147]</td>
                            {% for week in weeks %}
                                <td>{{ week['kpi-picsure-preapproved-policies'] }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Total # pic-sure claims approved (rejected/invalid/unstarted -> claims -> claims-approved) policies [KPI: ??]</td>
                            {% for week in weeks %}
                                <td>{% if week['kpi-picsure-claims-approved-policies'] is defined %}{{ week['kpi-picsure-claims-approved-policies'] }}{% else %}??{% endif %}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Total # pic-sure rejected policies [KPI: 148]</td>
                            {% for week in weeks %}
                                <td>{{ week['kpi-picsure-rejected-policies'] }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Active # pic-sure unstarted policies (pic-sure policy, but no upload) [KPI: ??]</td>
                            {% for week in weeks %}
                                <td>{% if week['kpi-picsure-active-unstarted-policies'] is defined %}{{ week['kpi-picsure-active-unstarted-policies'] }}{% else %}??{% endif %}</td>
                            {% endfor %}
