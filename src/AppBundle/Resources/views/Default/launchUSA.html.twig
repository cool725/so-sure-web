{% set og_title = 'Coming soon to the USA!' %}
{% set og_image = cdn_url ~ '/images/so-sure-welcome.png' %}
{% extends 'base.html.twig' %}

{% block footer %}{% include '::simple_footer.html.twig' %}{% endblock %}
{% block nav %}{% include '::logo_nav.html.twig' %}{% endblock %}

{% block title %}sosure - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends don't claim. Coming soon to the US!"/>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
    '@AppBundle/Resources/public/sass/page/usa.scss'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block remotestylesheets %}
    <link href="https://cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}

    <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <div class="hero-usa">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div>
                                <h1 class="text-center" style="color: #3399FF; margin-bottom: 20px;">sosure</h1>
                                <h1 class="text-center">Insure with friends.
                                    <br>Get up to 80% of your money back.
                                </h1>
                            </div>
                            <div style="padding-top: 20px;">
                                <p class="lead text-center" id="hero-description">Introducing sosure, a better kind of insurance that allows you to get up to 80% of your money back when you connect with those you trust &amp; none of you claim.</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-top: 20px;">
                        <div class="col-md-6 text-right">
                            <a class="btn btn-primary join-waitlist" data-toggle="modal" data-target="#signupModal">Looking for Renter's Insurance?
                            </a>
                        </div>
                        <div class="col-md-6 text-left">
                            <a class="btn btn-info join-waitlist" data-toggle="modal" data-target="#signupModal">How about Home Owner's Insurance?
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Analytics -->

    <!-- Facebook Pixel -->
    <div id="ss-root" data-fb-id="{{ fb_appid }}"
         data-fb-redirect="{{ url("hwi_oauth_service_redirect", {service: "facebook"}) }}"
         ></div>


    <div class="modal fade" id="signupModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Keep me updated</h4>
          </div>
          <div class="modal-body">
                <!-- Begin MailChimp Signup Form -->
                <div id="mc_embed_signup">
                <form action="//so-sure.us12.list-manage.com/subscribe/post?u=d404a621b5ee396856d97129f&amp;id=b88f4758e0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" rel="noopener noreferrer" novalidate>
                    <div id="mc_embed_signup_scroll">
                    <h2>Please let me know when you're launching in the USA.</h2>
                <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
                <div class="mc-field-group">
                    <label for="mce-EMAIL">Email Address  <span class="asterisk">*</span>
                </label>
                    <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
                </div>
                    <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_d404a621b5ee396856d97129f_b88f4758e0" tabindex="-1" value=""></div>
                    <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
                    </div>
                </form>
                </div>
          </div>
        </div>
      </div>
    </div>
<!--End mc_embed_signup-->


{% endblock %}
