{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'quote' %}
{% set quote_mode = 1 %}

{% block title %}{{ phone.model }} Insurance - {{ phone.make }} - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends and don't claim. Download our app now to see how much you could save."/>
    <meta name="description" content="For a small monthly fee your phone is covered for theft, loss, accidental damage and unauthorised usage."/>
    <link rel="canonical" href="{{ url('quote_make_model', {'make': phone.makeCanonical, 'model': phone.encodedModelCanonical}) }}" />
{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/quotepage.css') }}">
{% endblock %}

{% block body %}

    <section class="quote">
        <div class="d-lg-flex">

            <div class="quote__details__container">
                <div class="quote__details px-4 pb-5 px-xl-5 pb-xl-0">
                    <div class="quote__h5 text-white mb-4 h5">Here’s your quote details, Insure your:</div>
                    <div class="d-flex align-items-md-center">
                        <h1 class="quote__h1 text-blue1 mb-2">
                            <span class="sub">
                                {{ phone.make }} {{ phone.model }}
                                <small>({{ phone.memory }}GB)</small>
                            </span>
                        </h1>
                        <div class="quote__alt__phones dropdown dropleft">
                            <a href="#"
                               class="dropdown-toggle"
                               id="dropdownMenuLink"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">
                                <i class="fas fa-chevron-down text-white fa-lg ml-3"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                {% if phones | length > 1 %}
                                    {% for phone_mem in phones %}
                                        {% if phone_mem.id != phone.id  %}
                                            <a href="{{ path('quote_make_model_memory', {'make': phone_mem.makeCanonical, 'model': phone_mem.encodedModelCanonical, 'memory': phone_mem.memory}) }}" class="dropdown-item" href="#">{{ phone_mem.memory }}GB</a>
                                        {% endif %}
                                    {% endfor %}
                                    <div class="dropdown-divider"></div>
                                {% endif %}
                                <a class="dropdown-item get-a-quote" href="#">I have a different phone</a>
                            </div>
                        </div>
                    </div>
                    <div class="quote__h1 text-white h1 mb-4"><span class="sub">For only</span> &pound;{{ phone_price.monthlyPremiumPrice }} a month</div>
                    {{ form_start(buy_form) }}
                        {{ form_widget(buy_form.buy_tablet, {
                            'label': 'Get Insured',
                            'attr': {
                                'class': 'btn btn-success btn-shadow btn-gradient-green  btn-block-xs'
                            }})
                        }}
                    {{ form_end(buy_form) }}
                    <div class="quote__footer d-none d-lg-flex justify-content-lg-between align-items-lg-center mt-5">
                        <div class="quote__footer__text">
                            <h4 class="text-white">The higest level of cover!</h4>
                            <p class="text-blue1 lead">We offer the markets highest level of cover</p>
                        </div>
                        <a href="#quote_info"
                           class="btn btn-outline-blue1"
                           data-toggle="collapse"
                           role="button"
                           aria-expanded="false"
                           aria-controls="quote_info"><span>See full policy</span>
                           <i class="fas fa-caret-down"></i></a>
                    </div>
                </div>
                <div id="quote_info" class="quote__info__container collapse">
                    <div class="quote__info mx-4 mx-lg-5 py-5">
                        <div class="h1 text-white">{{ phone.make }} {{ phone.model }}
                                <small>({{ phone.memory }}GB)</small></div>
                        <div class="h1 text-blue1 mb-5">Full Cover Details</div>
