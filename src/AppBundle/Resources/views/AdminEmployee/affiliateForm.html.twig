{% block body %}
    {{ form_start(form) }}
        <h5 class="mb-3">Company Details</h5>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.name, 'Name') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.name) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.address1, 'Address Line1') }}
                {{ form_widget(form.address1, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.address1) }}</div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.address2, 'Address Line 2') }}
                {{ form_widget(form.address2, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.address1) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.address3, 'Address Line 3') }}
                {{ form_widget(form.address3, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.address3) }}</div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.city, 'City') }}
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.city) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.postcode, 'Postcode') }}
                {{ form_widget(form.postcode, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.postcode) }}</div>
            </div>
        </div>
        <h5 class="mb-3">Financials</h5>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.chargeModel, 'Charge Model') }}
                {{ form_widget(form.chargeModel, {'attr': {'class': 'form-control', 'id': 'chargeModel'}}) }}
                <div class="with-errors">{{ form_errors(form.chargeModel) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.days, 'Days') }}
                {{ form_widget(form.days, {'attr': {'class': 'form-control', 'id': 'renewalDays'}}) }}
                <div class="with-errors">{{ form_errors(form.days) }}</div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.renewalDays, 'Renewal Days') }}
                {{ form_widget(form.renewalDays, {'attr': {'class': 'form-control', 'id': 'chargeModel'}}) }}
                <div class="with-errors">{{ form_errors(form.renewalDays) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.cpa, 'Cpa') }}
                {{ form_widget(form.cpa, {'attr': {'class': 'form-control', 'type': 'number', 'placeholder': 'Â£'}}) }}
                <div class="with-errors">{{ form_errors(form.cpa) }}</div>
            </div>
        </div>
        <h5 class="mb-3">Tracking</h5>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.leadSource, 'Lead Source') }}
                {{ form_widget(form.leadSource, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.leadSource) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.leadSource, 'Lead Source Details') }}
                {{ form_widget(form.leadSourceDetails, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.leadSourceDetails) }}</div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.campaignSource, 'Campaign Source') }}
                {{ form_widget(form.campaignSource, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.campaignSource) }}</div>
            </div>
            <div class="form-group col">
                {{ form_label(form.campaignName, 'Campaign Name') }}
                {{ form_widget(form.campaignName, {'attr': {'class': 'form-control'}}) }}
                <div class="with-errors">{{ form_errors(form.campaignName) }}</div>
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.next, {'attr': {'class': 'btn btn-success'}, 'label': 'Add Affiliate'}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
