{% extends 'admin_claims_base_rebrand.html.twig' %}
{% form_theme picsure_search_form with ['AppBundle:Form:fields.html.twig', 'AppBundle:Form:submit.html.twig'] %}

{# Set vars #}
{% set body_class = 'admin-pic-sure' %}

{% block title %}so-sure - pic-sure{% endblock %}
{% block meta %}{% endblock %}

{% block cssPage %}
   {#  <link rel="stylesheet" href="{{ asset('css-js/homepage.css') }}"> #}
{% endblock %}

{% block body %}

    <section class="py-4 px-md-4">
        <div class="container-fluid">
            {# TODO: Heading area #}
            <div class="d-lg-flex align-items-lg-center justify-content-lg-between mb-3">
                <h1 class="h2">pic-sure - {{ status }}</h1>
            </div>
            {# TODO: Controls area #}
            <div class="card card-page-filter mb-5">
                <div class="card-body">
                     {{ form_start(picsure_search_form, {'attr': {'class': 'form-inline'}}) }}
                        <div class="form-group">
                            <label class="mr-md-2">Type: </label>
                            {{ form_widget(picsure_search_form.status, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(picsure_search_form.search, {'attr':{'class':'btn btn-success btn-square ml-md-2'}}) }}
                        </div>
                     {{ form_end(picsure_search_form) }}
                </div>
            </div>
            {% if policies|length == 0 %}
                <p class="mb-5">No records found</p>
            {% else %}
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th>User</th>
                                <th>Status</th>
                                <th>Submitted image(s)</th>
                                <th>Actions</th>
                                <th>Machine learning</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for policy in policies %}
                                {# TODO: Set table row colour based of ML score eventually #}
                                <tr>
                                    {# Policy #}
                                    <td><a href="{{ path('admin_policy', {'id': policy.id}) }}">{{ policy.policyNumber }}</a></td>
                                    {# Fraud Check #}
                                    <td>
                                        {% if policy.picSureCircumvention is null %}
                                            <i class="fal fa-clock"></i> Pre anti-fraud check
                                        {% elseif policy.picSureCircumvention == true %}
                                            <i class="fal fa-exclamation-triangle"></i> Possible Fraud <br><small>i.e. too many attempts to do pic-sure and imei upload was too long, check events in mixpanel</small>
                                        {% elseif policy.picSureCircumvention == false %}
                                            <i class="fal fa-thumbs-up"></i> No Fraud Detected
                                        {% endif %}
                                    </td>
                                    {# Submitted image(s) #}
                                    <td>
                                        {% for file in policy.getPolicyPicSureFiles %}
                                            {% if policy.picSureStatus == 'manual' %}
                                                <a href="{{ path('admin_picsure_image', {'file': file.key }) }}"
                                                   class="no-style"
                                                   data-fancybox="{{ policy.policyNumber }}"
                                                   data-caption="{{ policy.policyNumber }}">
                                                    <img src="{{ path('admin_picsure_image', {'file': file.key }) }}" width="40px" height="40px">
                                                </a>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    {# Actions #}
                                    <td>
                                        {% if policy.picSureStatus == 'manual' %}
                                            <a class="btn btn-success btn-square btn-sm mr-2"
                                               href="{{ path('admin_picsure_approve', {'id': policy.id}) }}">Approve</a>
                                            <a href="#"
                                               class="btn btn-warning btn-square btn-sm mr-2"
                                               data-toggle="modal"
                                               data-target="#invalid_modal"
                                               data-policy-number="{{ policy.policyNumber }}"
                                               data-submit="{{ path('admin_picsure_invalid', {'id': policy.id}) }}">Invalid</a>
                                            <a class="btn btn-danger  btn-square btn-sm"
                                               href="{{ path('admin_picsure_reject', {'id': policy.id}) }}">Damaged</a>
                                        {% else %}
                                            <small>-</small>
                                        {% endif %}
                                    </td>
                                    {# Machine learning score #}
                                    {# TODO: Run through with Jules #}
                                    <td>
                                        {% for file in policy.getPolicyPicSureFiles %}
                                            {% if 'picsure-status' in file.getMetadata()|keys %}

                                                File Status: {{ file.getMetadata()['picsure-status'] }} {% if 'picsure-status-date' in file.getMetadata()|keys %} on {{ file.getMetadata()['picsure-status-date'] }} {%  endif %}
                                                {% if 'picsure-status-user-name' in file.getMetadata()|keys %} by {{ file.getMetadata()['picsure-status-user-name'] }}
                                                {% endif %}

                                                {% if 'picsure-ml-status' in file.getMetadata()|keys and 'picsure-ml-confidence' in file.getMetadata()|keys %}
                                                    {{ file.getMetadata()['picsure-ml-status']|capitalize }} with confidence {{ file.getMetadata()['picsure-ml-confidence']*100.0|number_format(2, '.', ',') }}&percnt;
                                                {% else %}
                                                    {% if 'undamaged' in file.getMetadata()['picsure-ml-score']|keys %}
                                                        undamaged ({{ (file.getMetadata()['picsure-ml-score']['undamaged']*100.0)|number_format(0, '.', ',') }}&percnt;)
                                                    {% endif %}
                                                    {% if 'invalid' in file.getMetadata()['picsure-ml-score']|keys %}
                                                        invalid ({{ (file.getMetadata()['picsure-ml-score']['invalid']*100.0)|number_format(0, '.', ',') }}&percnt;)
                                                    {% endif %}
                                                    {% if 'damaged' in file.getMetadata()['picsure-ml-score']|keys %}
                                                        damaged ({{ (file.getMetadata()['picsure-ml-score']['damaged']*100.0)|number_format(0, '.', ',') }}&percnt;)
                                                    {% endif %}
                                                {% endif %}

                                                <a class="btn btn-default-outline btn-square" href="{{ path('admin_picsure_ml_predict', {'id': file.getId()}) }}"><i class="fal fa-sync-alt"></i> <span class="sr-only">Re-run</span></a>

                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}

            {% if policies.count > 0 %}
                <div class="d-flex justify-content-center mb-5">
                    {{ pagerfanta(pager, 'twitter_bootstrap4') }}
                </div>
            {% endif %}

        </div>
    </section>

    {# Page Modals #}
    <div class="modal fade"
         id="invalid_modal"
         tabindex="-1" role="dialog"
         aria-labelledby="policy_24_72_hours"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Invalid pic-sure</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fal fa-times text-white"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="invalid-picsure-form" method="post">
                        <div class="form-group">
                            <label for="message">Choose feedback:</label>
                            <select id="invalid_picsure_options" class="form-control">
                                <option value="Keep screen edge clear of fingers for validation">Keep screen edge clear of fingers for validation</option>
                                <option value="Phone to far from mirror for validation">Phone to far from mirror for validation</option>
                                <option value="Do you have a screen protector on? Please remove for validation">Do you have a screen protector on? Please remove for validation</option>
                                <option value="Whole phone needs to be visible for validation">Whole phone needs to be visible for validation</option>
                                <option value="Reflective surface not clean enough for validation">Reflective surface not clean enough for validation</option>
                                <option value="üçÜ cannot be validated">üçÜ cannot be validated</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="message">Message to send to user:</label>
                            <textarea type="text"
                                      class="form-control"
                                      id="message"
                                      name="message"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-square">Invalidate pic-sure</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/picsure.js') }}"></script>
{% endblock %}
