{# Header
-----------------------------------------------------------------------------#}

<meta charset="UTF-8" />

{# Mobile Specific Meta
-----------------------------------------------------------------------------#}
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover">

<meta name="referrer" content="origin" />

{# Favicon
-----------------------------------------------------------------------------#}
<link rel="icon" type="image/png" href="{{ cdn_url }}/images/favicons/favicon.png">
<link rel="shortcut icon" href="{{ cdn_url }}/images/favicons/favicon.ico" type="image/x-icon" />

<link rel="apple-touch-icon" sizes="57x57" href="{{ cdn_url }}/images/favicons/apple-icon-57x57.png">
<link rel="apple-touch-icon" sizes="60x60" href="{{ cdn_url }}/images/favicons/apple-icon-60x60.png">
<link rel="apple-touch-icon" sizes="72x72" href="{{ cdn_url }}/images/favicons/apple-icon-72x72.png">
<link rel="apple-touch-icon" sizes="76x76" href="{{ cdn_url }}/images/favicons/apple-icon-76x76.png">
<link rel="apple-touch-icon" sizes="114x114" href="{{ cdn_url }}/images/favicons/apple-icon-114x114.png">
<link rel="apple-touch-icon" sizes="120x120" href="{{ cdn_url }}/images/favicons/apple-icon-120x120.png">
<link rel="apple-touch-icon" sizes="144x144" href="{{ cdn_url }}/images/favicons/apple-icon-144x144.png">
<link rel="apple-touch-icon" sizes="152x152" href="{{ cdn_url }}/images/favicons/apple-icon-152x152.png">
<link rel="apple-touch-icon" sizes="180x180" href="{{ cdn_url }}/images/favicons/apple-icon-180x180.png">
<link rel="icon" type="image/png" sizes="192x192"  href="{{ cdn_url }}/images/favicons/android-icon-192x192.png">
<link rel="icon" type="image/png" sizes="32x32" href="{{ cdn_url }}/images/favicons/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="96x96" href="{{ cdn_url }}/images/favicons/favicon-96x96.png">
<link rel="icon" type="image/png" sizes="16x16" href="{{ cdn_url }}/images/favicons/favicon-16x16.png">

<link rel="manifest" href="{{ cdn_url }}/images/favicons/manifest.json">
<meta name="msapplication-TileColor" content="#ffffff">
<meta name="msapplication-TileImage" content="{{ cdn_url }}/images/favicons/ms-icon-144x144.png">
<meta name="theme-color" content="#ffffff">
<meta name="msapplication-square70x70logo" content="{{ cdn_url }}/images/favicons/ms-icon-70x70.png" />
<meta name="msapplication-square150x150logo" content="{{ cdn_url }}/images/favicons/ms-icon-150x150.png" />
<meta name="msapplication-square310x310logo" content="{{ cdn_url }}/images/favicons/ms-icon-310x310.png" />

{# FB Open Graph Tags
-----------------------------------------------------------------------------#}
<meta property="fb:app_id" content="{{ fb_appid }}" />
<meta property="og:url" content="{{ app.request.uri }}" />
<meta property="og:type" content="website" />
<meta property="og:description" content="The future of phone insurance has arrived (and it's up to 80% cheaper when you connect with friends & don't claim)." />
{% if og_title is defined %}
  <meta property="og:title" content="{{ og_title }}" />
{% else %}
  <meta property="og:title" content="Welcome to Social Insurance" />
{% endif %}
{% if og_image is defined %}
  <meta property="og:image" content="{{ og_image }}" />
{% else %}
  <meta property="og:image" content="{{ cdn_url }}/images/so-sure-welcome.png" />
{% endif %}
<meta property="fb:pages" content="781483845311300" />

{# Twitter Tags
-----------------------------------------------------------------------------#}
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@wearesosure" />
<meta name="twitter:image" content="{{ cdn_url }}/images/so-sure-welcome.png" />

{# Font
-----------------------------------------------------------------------------#}

{% if include_emoji is defined and include_emoji == 1 %}
    <script src="https://twemoji.maxcdn.com/2/twemoji.min.js?2.2.3"></script>
{% endif %}
