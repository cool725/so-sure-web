{% extends 'base.html.twig' %}

{# Set vars #}
{% set new_stylesheet = 1 %}
{% set new_footer = 1 %}

{% block title %}so-sure - Make a claim
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
    'components/animate.css/animate.min.css'
    '@AppBundle/Resources/public/sass/page/claim.scss'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{# {% block nav %}{% endblock %} #}

{% block body %}

    {# Claims Form #}
    <section class="section--pad claim__form" id="claim-form-container" >
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <img src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_broken-phone.png" width="220px" class="img-center img-circle" alt="Broken phone logo">
                    <h3>Enter your email and we'll send you a link to review your claim.</h3>
                    {{ form_start(claim_email_form, {
                        'attr': {
                            'data-toggle': 'validator',
                            'class': 'validate-form',
                            'id':'claim-email-form',
                            'data-client-validation': form_client_validation
                    }}) }}
                        <div class="form-group {% if form_errors(claim_email_form.email) %}has-error{% endif %}">
                            {{ form_widget(claim_email_form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
                            <div class="help-block"><span class="text-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Please use the email address associated with your so-sure policy</span></div>
                            <div class="help-block with-errors">{{ form_errors(claim_email_form.email) }}</div>
                        </div>
                        <div class="form-group">
                           {{ form_widget(claim_email_form.submit, {
                                'label': 'Send me the link',
                                'attr': {
                                    'class': 'btn btn-blue btn-pad btn-lg'
                            }}) }}
                        </div>
                    {{ form_end(claim_email_form) }}
                    <p class="lead"><br><strong>Prefer to speak to a human?</strong><br>Call our claims team on <strong><a href="tel:01133209722" class="text-nowrap text-blue">0113 320 9722</a></strong> (local rates apply).</p>
                </div>
            </div>
        </div>
    </section>

    {# Page Modals #}
    {# End Page Modals #}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/moment/moment.min.js'
    'components/jquery-mask-plugin/jquery.mask.min.js'
    'components/jquery-validation/jquery.validate.min.js'
    '@AppBundle/Resources/public/js/Default/jqueryValidatorMethods.js'
    '@AppBundle/Resources/public/js/Default/claim.js' %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}
