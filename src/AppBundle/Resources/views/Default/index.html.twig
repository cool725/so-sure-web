{% if referral != '' %}
    {% set og_title = 'Join today & get rewarded' %}
    {% set og_image = cdn_url ~ '/images/so-sure-welcome.png' %}
{% endif %}
{% extends 'base.html.twig' %}

{% block title %}so-sure - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends don't claim. Download our app now to see how much you could save."/>
    <meta name="keywords" content="mobile phone insurance, social insurance"/>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    '@AppBundle/Resources/public/css/Default/index.css'
    '@AppBundle/Resources/public/css/Default/homepage.css'
    '@AppBundle/Resources/public/css/Default/selectPhoneMake.css'
    '@AppBundle/Resources/public/css/Default/scrollindicator.css'
    '@AppBundle/Resources/public/css/Default/modal.css'        
    '@AppBundle/Resources/public/css/Default/videoOverlay.css'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/vimeo-player-js/player.min.js'        
    '@AppBundle/Resources/public/js/Default/index.js'
    '@AppBundle/Resources/public/js/Default/modalVideo.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMake.js'
 %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block body %}

    <!-- Background image https://pixabay.com/en/audience-band-blur-celebration-1867983/ -->

    <section class="hero" id="get-quote">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>
                        Insure. Save. Together.
                    </h1>
                    <p class="lead">Up to 40% cheaper than traditional insurers, faster claims &amp; cashback. Finally, mobile phone insurance that’s worthwhile</p>
                    <ul class="list-inline hero-list-inline text-center hidden-xs">
                        <li>
                            <a class="hero-link" href="{{ path('quote_make_model_memory', {'make': i6s.make, 'model': i6s.getEncodedModel(), 'memory': i6s.memory}) }}">
                                <img class="" src="{{ cdn_url }}/images/home/phone-logos/iphone_6s_logo_light.svg" width="180" />
                                <br>
                                Insure from £{{ i6s.getCurrentPhonePrice().getMonthlyPremiumPrice() }}
                            </a>                                
                        </li>
                        <li>
                            <a class="hero-link" href="{{ path('quote_make_model_memory', {'make': i7.make, 'model': i7.getEncodedModel(), 'memory': i7.memory}) }}">
                                <img class="" src="{{ cdn_url }}/images/home/phone-logos/apple_iphone_7_logo_light.svg" width="180"  />
                                <br>
                                Insure from £{{ i7.getCurrentPhonePrice().getMonthlyPremiumPrice() }}
                            </a>
                        </li>
                        <li>
                            <a class="hero-link" href="{{ path('quote_make_model_memory', {'make': s7.make, 'model': s7.getEncodedModel(), 'memory': s7.memory}) }}">
                                <img class="" src="{{ cdn_url }}/images/home/phone-logos/samsung_galaxy_s7_logo_light.svg" width="180" />
                                <br>
                                Insure from £{{ s7.getCurrentPhonePrice().getMonthlyPremiumPrice() }}
                            </a>
                        </li>
                    </ul> 
                    <p class="text-center"><a class="btn btn-success btn-rounded btn-lg" data-toggle="modal" data-target="#quoteModel">Get a quote</a></p>                                                                 
                </div>
                <div class="col-md-5">
                        <img src="{{ cdn_url }}/images/home/illustrations/pngs/slide3-min.png" class="hero-img" width="300px;"> 
                </div>                 
            </div>
            <div class="row">
                <div class="col-md-12">
                      
                </div>
            </div>
        </div>
    </section>    

    {% include 'AppBundle::Default/press.html.twig' %}

    {# {% include 'AppBundle::Default/benefits.html.twig' %} #}
    <section class="section--pad background-white">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p class="text-center"><img src="{{ cdn_url }}/images/about/team/dylan_bio.jpg" alt="Dylan CEO" class="img-circle" width="300px;">
                        <br><br><strong>Dylan Bourguignon - CEO</strong>
                    </p>
                </div>
                <div class="col-md-8">
                    <h2>Why did we create so-sure?</h2>
                    <p class="h3">Traditional insurance is rubbish</p>
                    <ul class="lead list-unstyled">
                        <li><i class="fa fa-minus-circle text-red" aria-hidden="true"></i> Too expensive</li>
                        <li><i class="fa fa-minus-circle text-red" aria-hidden="true"></i> Doesn’t payout when you claim</li>
                    </ul>
                    <p class="h3">We are changing that, starting with mobile phone insurance</p>
                    <ul class="lead list-unstyled">
                        <li><i class="fa fa-check-circle text-green" aria-hidden="true"></i> Up to 40% cheaper than mobile operators</li>
                        <li><i class="fa fa-check-circle text-green" aria-hidden="true"></i> Phone in your hand the next working day when you claim</li>
                        <li><i class="fa fa-check-circle text-green" aria-hidden="true"></i> Get cashback when you and your friends don’t claim</li>
                        <li><i class="fa fa-check-circle text-green" aria-hidden="true"></i> We don’t hide behind SMALL PRINT or painful process </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    {# {% include 'AppBundle::Default/howItWorksVideo.html.twig' %}    #}
    <section id="how-it-works" class="section--pad alt-brand-gradient">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-white">
                    <h2 class="text-white">Save Money! Now &amp; Later</h2>
                    <p class="text-white h3">Up to 40% cheaper than mobile operators</p>
                    <p class="lead">And you can get up to 80% cashback every year if you and your friends don’t claim.</p>
                    <ul>
                        <li>Connect to friends/family and each receive up to £10 in your individual Reward Pots.</li>
                        <li>At the end of the year, when you and your connections haven’t claimed, your Reward Pot is paid out to you.</li>
                    </ul>
                    <p class="text-white h3">Watch the video to find out more!</p>         
                </div>
                <div class="col-md-6">
                    <div class="explainer-video-thumb">
                        <a class="explainer-video-view-thumb" data-toggle="modal" data-target="#modal-fullscreen">
                            <img src="{{ cdn_url }}/images/home/explainer-video/explainer-video-frame-2.png" class="img-responsive">
                            
                            <svg id="play-button" width="80px" height="80px" viewBox="0 0 200 200" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                <defs></defs>
                                <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <g id="Artboard">
                                        <circle id="play-bg" fill="#202532" cx="100" cy="100" r="100"></circle>
                                        <polygon id="Triangle" fill="#FFFFFF" points="149 100 69 145 69 55"></polygon>
                                    </g>
                                </g>
                            </svg>
                        </a>
                    </div>                
                </div>
            </div>
        </div>
    </section>

    <section class="section--pad background-white">
        <div class="container text-center">
            <h2 class="text-center">Faster claims, Better cover</h2>
            <table class="table table-striped table-bordered table-responsive">
                <thead>
                    <tr class="info">
                        <td width="50%"><strong>so-sure</strong></td>
                        <td width="50%"><strong>Competition</strong></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Claims speed: Next working day</td>
                        <td>4-18 days on average*</td>
                    </tr>
                    <tr>
                        <td>Immediate cover</td>
                        <td>Can be up to 14 days before cover starts</td>
                    </tr>
                    <tr>
                        <td>Insure phones up to 3 years old</td>
                        <td>Most require purchase within 30 days</td>
                    </tr>
                    <tr>
                        <td>Terms &amp; Conditions in plain English</td>
                        <td>Do you have a law degree to understand them?</td>
                    </tr>
                </tbody>
            </table>
            <p><small>*FCA report Dec 2015</small></p>
        </div>
    </section>

    {% include 'AppBundle::Default/feedbackQuotes.html.twig' %}

    {% include 'AppBundle::Default/footerCta.html.twig' %}

    <section class="press">
        <div class="container">
            <div class="col-sm-3 col-md-2 col-md-offset-3">
                <h4 class="footer-press--heading">
                    <strong><small>IN PARTNERSHIP WITH</small></strong>
                </h4>
            </div>
            <div class="col-sm-3 col-md-2">
                <img src="{{ cdn_url }}/images/munichre-logo.png" alt="Munich RE">
            </div>    
            <div class="col-sm-3 col-md-2">
                <img src="{{ cdn_url }}/images/salva-logo.png" alt="Salva">
            </div>                        
        </div>
    </section>   

    {# Page Modals #}         

    {% include 'AppBundle::Default/modalVideo.html.twig' %}    

    <div class="modal modal-switching fade" 
         id="switchingModal" 
         tabindex="-1" 
         role="dialog" 
         aria-labelledby="Switch to so-sure" 
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <i class="fa fa-times fa-lg" aria-hidden="true"></i>
                        <span class="sr-only">Close</span>
                    </button>
                    <h3>Want to switch to so-sure?</h3>
                </div>
                <div class="modal-body">
                    <p><strong>Switching to so-sure is easy. Just follow these steps:</strong></p>
                    <ol>
                        <li>Contact your existing insurance provider and request to cancel your policy. Check on their website but often you can email them and, at most, give them a 30 day notice.</li>
                        <li>Download the so-sure app and purchase your new policy from so-sure.</li>
                    </ol>
                    <p class="text-center"><button type="button" class="btn btn-primary" data-dismiss="modal" aria-label="Close">Got it!</button></p>
                </div>
            </div>
        </div>
    </div>      

    {% include 'AppBundle::Default/modalQuote.html.twig' %}    

    {# End Page Modals #}       

{% endblock %}