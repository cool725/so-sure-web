{# Any changes to error pages should also be reflected in the varnish error page - cdn files + varnish vcl file #}
{% extends '::base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'error-page' %}

{% block title %}so-sure - Server Error{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/error.css') }}">
{% endblock %}

{% block body %}
    <section class="exception d-flex align-items-center text-center">
        <div class="container">
            <img class="logo" src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_broken-phone.png" alt="Unhappy so-sure" width="200px" class="d-block" alt="Broken phone logo" />
            <h1 class="text-white">Sorry, computer says, no.</h1>
            <p class="text-white">It looks like there was a server error. Our engineers will investigate the problem, but in the meantime, you can try refreshing the page.</p>
            <p class="text-white">If you're attempting to login or reset your password, you may have too many failed attempts recently, in which case, please <a href="mailto:support@wearesosure.com?Subject=503 Error" class="text-white">contact us</a>.</p>
        </div>
    </section>
{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/error.js') }}"></script>
{% endblock %}
