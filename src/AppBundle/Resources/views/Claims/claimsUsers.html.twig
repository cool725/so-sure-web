{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.mobile, 'Mobile Number', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.mobile) }}
            {{ form_widget(form.mobile, {'attr': {'class': 'col-sm-4'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'col-sm-4'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.postcode, 'Postcode', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.postcode) }}
            {{ form_widget(form.postcode, {'attr': {'class': 'col-sm-4'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.lastname, 'Lastname', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.lastname) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'col-sm-4'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.search, {'label': 'Search', 'attr': {'class': 'btn btn-success'}}) }}
        </div>
    {{ form_end(form) }}
    
    {% if users.count == 0 %}
    <div class="row-fluid">
        <h2>No users found</h2>
    </div>
    {% else %}
    <div class="row-fluid">
        <div class="col-md-11">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td><a href="{{ path('claims_user', {id: user.id}) }}">{{ user.email }}</a></td>
                            <td>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>        
        </div>
    </div>
    {% endif %}
    </form>
    
    {% if users.count > 0 %}
    <div class="pagerfanta">
        {{ pagerfanta(pager, 'twitter_bootstrap3') }}
    </div>
    {% endif %}

</div>
{% endblock %}

        {% block javascripts %}
             {{ parent() }}
    {% javascripts
        '@AppBundle/Resources/public/js/Admin/phone.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}            
        {% endblock %}
