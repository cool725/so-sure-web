<div id="select-phone-data" class="search-phone-form--homepage" data-phones='{{ phones|json_encode|raw }}'>
    {% if type is defined and type == 'purchase-select' %}
        {% set buttonText = 'Select Phone' %}
    {% elseif type is defined and type == 'purchase-change' %}
        {% set buttonText = 'Select Phone' %}
    {% else %}
        {% set buttonText = 'Quote me' %}
    {% endif %}

    {{ form_start(form_phone) }}
        <div class="form-group">
            {{ form_widget(form_phone.make, {
              'attr': {
                'class': 'select-phone-make form-control'
            }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form_phone.phoneId, {
              'attr': {
                'class': 'select-phones form-control animated pulse'
            }}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form_phone.next, {
              'label': buttonText,
              'attr': {
                'id': 'dropdownSearch',
                'class': 'btn btn-green btn-block btn-pad animated pulse'
            }}) }}
        </div>
    {{ form_end(form_phone) }}
</div>
