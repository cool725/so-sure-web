{# Unauthorised Network Charges #}
<div class="modal modal-blue fade"
     id="charges-modal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="so-sure"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
