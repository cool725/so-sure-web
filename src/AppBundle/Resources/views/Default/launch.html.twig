            <p class="share-url">{{ referral_url }}</p>
            <div class="row">
              <div class="one-half column">
                <div class="fb-share-button" data-href="{{ referral_url }}" data-layout="button"></div>
              </div>
              <div class="one-half column">
                <div class="twt-share-button"><a class="twitter-share-button" href="https://twitter.com/share" data-via="wearesosure" data-url="{{ referral_url }}">Tweet</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

