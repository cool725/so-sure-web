{% extends 'admin_claims_base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
        'components/datatables.net-bs/dataTables.bootstrap.min.css'
        '@AppBundle/Resources/public/sass/page/admin.scss'
    %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'components/datatables.net/jquery.dataTables.min.js'
        'components/datatables.net-bs/dataTables.bootstrap.min.js'
        '@AppBundle/Resources/public/js/Admin/month.js'
        '@AppBundle/Resources/public/js/Admin/bacs.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
<div class="container" style="margin-bottom: 50px">

    <div class="row">
        <div class="col-md-4">
            <h1>so-sure Bacs <br> {{ month }} / {{ year }}</h1>
        </div>
        <form class="month-form form-inline" method="POST" autocomplete="off">
            <div class="col-md-3">
                <div class="form-group" style="padding-top: 15px;">
                    <div class="input-group date month" data-url="{{ path('admin_bacs') }}">
                        <input name="bacs" type='text' class="form-control" value="{{month}}-{{year}}" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </span>
                    </div>
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button class="btn btn-success"><i class="fa fa-arrow-right"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group" style="padding-top: 15px;">
                    <div class="btn-group">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#uploadModal"
                        > Upload Report</button>
                        <button class="btn btn-success bacs-serial-edit" type="button"
                                data-toggle="modal" data-target="#approvePaymentsModal">
                            Approve Payments
                        </button>
                    </div>
                </div>
                <div class="form-group" style="padding-top: 15px;">
                    <button class="btn btn-warning bacs-serial-edit" type="button"
                            data-toggle="modal" data-target="#editSequenceSerialNumberModal">
                        <span title="Current Sequence File">{{ currentSequence.seq }}</span> <i class="fa fa-edit"></i>
                    </button>
                </div>
                <div class="form-group" style="padding-top: 15px;">
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#uploadDebitModal"
                        > Bacs Debit</button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#uploadCreditModal"
                        > Bacs Credit</button>
                    </div>
                </div>
                <div class="form-group" style="padding-top: 15px;">
                    <div class="form-group">
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#mandatesModal"
                        > Mandates <span class="badge" title="Actionable Mandates">{{ outstandingMandates }}</span></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="claimPolicyItem" style="margin-top: 20px">
        <ul class="nav nav-tabs nav-justified">
            {% set dailyCount = 0 %}
            {% for file in files %}
                {% if not file.isActioned %}
                    {% set dailyCount = dailyCount + 1 %}
                {% endif %}
            {% endfor %}
            {% set paymentsCount = 0 %}
            {% for payment in payments if payment.serialNumber and payment.submittedDate %}
                {% if payment.canAction %}
                    {% set paymentsCount = paymentsCount + 1 %}
                {% endif %}
            {% endfor %}

            <li role="presentation" class="active"><a href="#dddc">Debits/Credits <span class="badge" title="Actionable Files">{{ dailyCount }}</span></a></li>
            <li role="presentation"><a href="#payments">Payments <span class="badge" title="Actionable Payments">{{ paymentsCount }}</span></a></li>
            <li role="presentation"><a href="#reports">Bacs Reports</a></li>
            <li role="presentation"><a href="#reconciliation-debit">Reconciliation Debit</a></li>
            <li role="presentation"><a href="#reconciliation-credit">Reconciliation Credit</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="dddc">
                <h2>Daily Files</h2>
                {% if files|length == 0 %}
                    <p>No files present</p>
                {% else %}
                    <table class="table table-striped">
                        <tr>
                            <th width="30%">File name</th>
                            <th width="45%">Details</th>
                            <th width="15%">Submitted to BACS</th>
                            <th width="10%">Edit</th>
                        </tr>
                        {% for file in files %}
                            <tr>
                                <td width="30%">
                                    {{ file.key }}
                                    <a href="{{ path('admin_bacs_file', {'id': file.id }) }}" target="_blank" rel="noopener noreferrer"><i class="fa fa-download"></i></a>
                                    <br>
                                    <a href="#" data-toggle="modal" data-target="#serialNumberModal" data-serial="{{ file.serialNumber }}"
                                       data-details-url="{{ path('admin_bacs_serial_number_details', {'serial': file.serialNumber} ) }}">
                                        {{ file.serialNumber }}
                                    </a>
                                    (Generated: {{  file.date|date('d M Y H:i', 'Europe/London')  }})
                                </td>
                                <td width="45%">
                                    {{ file.metadata|json_encode }}
                                </td>
                                <td width="15%">
                                    {% if file.isActioned %}
                                        {{ file.status }}
                                        {% if file.status == 'submitted' %}
                                            <i class="fa fa-check text-success"></i><br>
                                            {{  file.submittedDate|date('d M Y H:i', 'Europe/London')  }}
                                        {% elseif file.status == 'cancelled' %}
                                            <i class="fa fa-minus text-danger"></i>
                                        {% endif %}
                                    {% else %}
                                        <button title="Mark as submitted" type="button" class="btn btn-success bacs-submit" data-token="{{ csrf_token('default') }}"
                                                data-bacs-action-url="{{ path('admin_bacs_submit', {'id': file.id}) }}"><i class="fa fa-check"></i></button>
                                        <button title="Mark as cancelled" type="button" class="btn btn-danger bacs-cancel" data-token="{{ csrf_token('default') }}"
                                                data-bacs-action-url="{{ path('admin_bacs_cancel', {'id': file.id}) }}"><i class="fa fa-power-off"></i></button>
                                    {% endif %}
                                </td>
                                <td width="10%">
                                    <button class="btn btn-success bacs-serial-edit" data-serial-number="{{ file.serialNumber }}"
                                            data-serial-number-url="{{ path('admin_bacs_update_serial_number', {'id': file.id }) }}"
                                            data-toggle="modal" data-target="#editSerialNumberModal">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
            <div role="tabpanel" class="tab-pane" id="reports">
                <h2>Input Files <span class="small">(confirmation of debit/credit)</span></h2>
