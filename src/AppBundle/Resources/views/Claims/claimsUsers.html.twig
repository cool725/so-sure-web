{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2>so-sure Claims</h2>
    {{ form_start(form) }}
    <div class="bg-info" style="border-radius: 10px;">
    <p class="text-center"><strong>Find users</strong></p>
    <div class="row">
        <div class="form-group">
            {{ form_label(form.mobile, 'Mobile Number', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.mobile) }}
            {{ form_widget(form.mobile, {'attr': {'class': 'col-sm-2'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'col-sm-2'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.postcode, 'Postcode', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.postcode) }}
            {{ form_widget(form.postcode, {'attr': {'class': 'col-sm-2'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.lastname, 'Lastname', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.lastname) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'col-sm-2'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.policy, 'Policy Number', {'label_attr': {'class': 'col-sm-2'}}) }}
            {{ form_errors(form.policy) }}
            {{ form_widget(form.policy, {'attr': {'class': 'col-sm-2'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-12 text-center">
            {{ form_widget(form.search, {'label': 'Search', 'attr': {'class': 'btn btn-success'}}) }}
        </div>
    </div>
    </div>
    {{ form_end(form) }}
    <h2>Results</h2>
    {% if users.count == 0 %}
    <div class="row-fluid">
        <h2>No users found</h2>
    </div>
    {% else %}
    <div class="row-fluid">
        <div class="col-md-11">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Policy Number</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% for policy in user.policies %}
                        <tr>
                            <td><a href="{{ path('claims_policy', {id: policy.id}) }}">{{ policy.policyNumber }}</a></td>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.mobileNumber }}</td>
                        </tr>
                        {% endfor %}
                        {% if user.policies|length == 0 %}
                        <tr>
                            <td>N/A</td>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.mobileNumber }}</td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>        
        </div>
    </div>
    {% endif %}
    </form>
    
    {% if users.count > 0 %}
    <div class="pagerfanta">
        {{ pagerfanta(pager, 'twitter_bootstrap3') }}
    </div>
    {% endif %}

</div>
{% endblock %}

        {% block javascripts %}
             {{ parent() }}
    {% javascripts
        '@AppBundle/Resources/public/js/Admin/phone.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}            
        {% endblock %}
