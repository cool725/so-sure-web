{% extends 'admin_claims_base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'admin-affiliates' %}

{% block title %}Offers - {{ phone }}{% endblock %}
{% block meta %}{% endblock %}

{% block cssPage %}
   {#  <link rel="stylesheet" href="{{ asset('css-js/homepage.css') }}"> #}
{% endblock %}

{% block body %}

    <section class="py-4 px-md-4">
        <div class="container-fluid">
            {# Heading area #}
            <div class="d-lg-flex align-items-lg-center justify-content-lg-between mb-3">
                <h1 class="h2">Offer Prices - {{ phone }}</h1>
            </div>
            <a href="{{ path('admin_phones') }}">Return to Phones</a>
            {# Controls area #}
            <div class="card card-page-filter mb-5">
                <div class="card-body">
                    <a href="#"
                       class="btn btn-primary"
                       data-toggle="modal"
                       data-target="#offer_form_modal"><i class="fal fa-plus fa-fw"></i> New Offer</a>
                </div>
            </div>
            {# Content area #}
            <h2>Active Offers</h2>
            <div class="table-responsive-sm mb-5">
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Pricing Stream</th>
                            <th>GWP</th>
                            <th>Excess (Damage/Theft)</th>
                            <th>Picsure Approved Excess (Damage/Theft)</th>
                            <th>Policies / Users</th>
                            <th>Deactivate</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for offer in phone.activeOffers %}
                            <tr>
                                <td>{{ offer.name }}</td>
                                <td>{{ offer.created|format('YYYY-MM-dd') }} by TODO: Create Name Here</td>
                                <td>{{ offer.price.stream }}</td>
                                <td>{{ offer.price.gwp }}</td>
                                <td>{{ offer.price.excess.damage }} / {{ offer.price.excess.theft }} </td>
                                <td>{{ offer.price.picsureExcess.damage }} / {{ offer.price.picsureExcess.theft }}</td>
                                <td>{{ offer.policies|length }} / {{ offer.users|length }}</td>
                                <td>TODO: Button</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <h2>Past Offers</h2>
            <div class="table-responsive-sm mb-5">
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Pricing Stream</th>
                            <th>GWP</th>
                            <th>Excess (Damage/Theft)</th>
                            <th>Picsure Approved Excess (Damage/Theft)</th>
                            <th>Policies / Users</th>
                            <th>Reactivate</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for offer in phone.inactiveOffers %}
                            <tr>
                                <td>{{ offer.name }}</td>
                                <td>{{ offer.created|format('YYYY-MM-dd') }} by TODO: Create Name Here</td>
                                <td>{{ offer.price.stream }}</td>
                                <td>{{ offer.price.gwp }}</td>
                                <td>{{ offer.price.excess.damage }} / {{ offer.price.excess.theft }} </td>
                                <td>{{ offer.price.picsureExcess.damage }} / {{ offer.price.picsureExcess.theft }}</td>
                                <td>{{ offer.policies|length }} / {{ offer.users|length }}</td>
                                <td>TODO: Button</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    {# Page Modals #}
    {% include 'AppBundle::Admin/adminConfirmModalNew.html.twig' with {
        'route': 'AppBundle:AdminEmployee:offerForm',
        'id': 'offer_form_modal',
        'params': {'id': phone.id, 'phone': phone},
        'title': 'Create New Offer',
        'size': 'modal-lg'
    } %}

{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/confirm-modal.js') }}"></script>
{% endblock %}
