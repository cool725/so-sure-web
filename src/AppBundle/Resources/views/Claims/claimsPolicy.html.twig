{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        '@AppBundle/Resources/public/js/tabs.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}            
{% endblock %}

{% block body %}
<div class="container">
    <h2>so-sure Claims - {{policy.user.name }}</h2>
    <div class="bg-danger" style="border-radius: 10px; padding: 20px; margin-bottom: 20px;">
        <p class="text-center"><strong>Record Claim</strong></p>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.number, 'Claim Number', {'label_attr': {'class': 'col-sm-4'}}) }}
                    {{ form_errors(form.number) }}
                    {{ form_widget(form.number, {'attr': {'class': 'col-sm-3'}}) }}
                </div>                
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.type, 'Claim Type', {'label_attr': {'class': 'col-sm-4'}}) }}
                    {{ form_errors(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'col-sm-3'}}) }}
                </div>                
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.suspected_fraud, '', {'label_attr': {'class': 'col-sm-4'}}) }}
                    {{ form_errors(form.suspected_fraud) }}
                    {{ form_widget(form.suspected_fraud, {'attr': {'class': 'col-sm-3'}}) }}
                </div>                
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.status, '', {'label_attr': {'class': 'col-sm-4'}}) }}
                    {{ form_errors(form.status) }}
                    {{ form_widget(form.status, {'attr': {'class': 'col-sm-3'}}) }}
                </div>                
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    {{ form_label(form.notes, '', {'label_attr': {'class': 'col-sm-2'}}) }}
                    {{ form_errors(form.notes) }}
                    {{ form_widget(form.notes, {'attr': {'class': 'col-sm-10'}}) }}
                </div>                
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    {{ form_widget(form.record, {'label': 'Record claim', 'attr': {'class': 'btn btn-success'}}) }}
                </div>                
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    {% include 'AppBundle::Claims/claimsPolicyItem.html.twig' %}
</div>
{% endblock %}
