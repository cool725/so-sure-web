                <td width="{{ text_width }}">Judo</td>
                <td>{{ paymentTotals.judo.numRefunded }}</td>
            </tr>
            <tr>
                <td width="{{ indent_width }}"></td>
                <td width="{{ text_width }}">Checkout</td>
                <td>{{ paymentTotals.checkout.numRefunded }}</td>
            </tr>
            <tr>
                <td width="{{ indent_width }}"></td>
                <td width="{{ text_width }}">Bacs</td>
