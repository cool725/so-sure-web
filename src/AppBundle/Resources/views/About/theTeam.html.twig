{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        '@AppBundle/Resources/public/css/About/index.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}
<section class="about-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="section-title">The team</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
            	<p><img src="{{ cdn_url }}/images/about/team.jpg" alt="The Team" class="img-responsive"></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
            	<p class="go-back"><a href="{{ path('about_home') }}"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Go back</a></p>
            </div>
        </div>
    </div>
</section>
{% endblock %}
