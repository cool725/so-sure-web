{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'landing' %}
{% set hero_class = '' %}
{% if exp_background_design is defined and exp_background_design == 'new-background' %}
    {% set body_class = 'landing money' %}
    {% set hero_class = 'hero-money' %}
{% endif %}
{% set robots_noindex = true %}
{% set include_get_a_quote = true %}

{% block title %}Welcome to Social Insurance {% if affiliate_company is defined %}with {{ affiliate_company }}{% endif %} | so-sure{% endblock %}
{% block meta %}
    <meta name="description" content="Mobile Insurance that's Simply Better, 24-72 hour replace or repair, Low excess from just {{ lowest_excess }} - New, second hand & refurbished phones, Up to 80% money back"/>
    <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/landing.css') }}">
{% endblock %}

{% block body %}
    <section class="hero {{ hero_class }}">
        <div class="container-large">
            <div class="hero__intro">
                <div class="breadcrumbs">
                    <ul class="list-inline"
                        vocab="https://schema.org/"
                        typeof="BreadcrumbList">
                        <li class="list-inline-item"
                            property="itemListElement"
                            typeof="ListItem">
                            <a href="{{ path('homepage') }}"
                               class="text-columbia-blue-e"
                               property="item"
                               typeof="WebPage">
                               <span property="name">Home</span>
                            </a>
                            <meta property="position" content="1">
                        </li>
                        <li class="list-inline-item text-white">
                            <i class="fal fa-angle-right text-white"></i>
                        </li>
                        <li class="list-inline-item text-white"
                            property="itemListElement"
                            typeof="ListItem">
                            <span property="name">Compare Cover</span>
                            <meta property="position" content="2">
                        </li>
                    </ul>
                </div>
                {% if affiliate_page == 'comparison' %}
                    <h1 class="mb-2 text-columbia-blue-e h2">{{ titleH1 }}</h1>
                    <p class="lead text-white mb-4">{{ leadP|raw }}</p>
                {% elseif affiliate_page == 'so-sure-compared' or affiliate_page == 'reward-gateway' %}
                    <h1 class="mb-2 text-white h2">Mobile Insurance that's Simply Better</h1>
                    <h2 class="h4 text-zaffre">Simple terms, pain-free claims, premium cover</h2>
                    <p class="mb-4 lead text-white">We're a new type of insurer that you can rely on. <br class="d-none d-lg-inline"> We protect you when you need to claim and reward you when you don't.</p>
                {% elseif affiliate_page == 'moneyback' %}
                    <h1 class="mb-2 text-white h2">Mobile Insurance that's Simply Better</h1>
                    <p class="mb-4 lead text-white">Simple Insurance with pain-free claims, premium cover and money back when you don't claim. <br class="d-none d-lg-inline"> Amazing when you need us and rewards when you don't.</p>
                {% else %}
                    <h1 class="mb-2 text-white h2">Mobile Insurance that's Simply Better</h1>
                    <p class="lead text-columbia-blue-e mb-2">affiliated with</p>
                    <img src="{{ cdn_url }}/images/onexone.png" data-src="{{ cdn_url }}/images/rebrand/partnerships/{{ affiliate_company_logo }}" alt="{{ affiliate_company }}" title="{{ affiliate_company }}" width="300px" class="d-block mt-3 mb-2 mx-auto lozad">
                {% endif %}
                {% if affiliate_page == 'money' %}
                    <p class="text-white">
                        <span class="h6">Xmas Offer:</span>
                        ¬£10 Amazon Voucher üéÅ use code MONEY10 at checkout.
                        <a href="#page_terms" data-toggle="modal" data-target="#page_terms" class="text-white">Terms &amp; Conditions</a>
                    </p>
                {% endif %}
            </div>
            <div class="hero__controls mb-4">
                <a href="#" class="btn btn-success btn-block-xs btn-shadow get-a-quote disabled">Get a Quote </a>
            </div>
            <div id="table-compare">
                {% include 'AppBundle::Default/_comparisonTable.html.twig' with {'affiliate_page': affiliate_page } %}
            </div>
        </div>
        <svg class="d-none d-md-block" preserveAspectRatio="xMinYMin meet" viewBox="0 0 750 77" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <defs></defs>
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g transform="translate(0.000000, -72.000000)" fill="#ffffff">
                    <g id="---BG---" transform="translate(-4700.000000, -8443.000000)">
                        <path d="M4700,8515 C4824,8551 4948.66667,8569 5074,8569 C5199.33333,8569 5324.66667,8551 5450,8515 L5450,8592 L4700,8592 L4700,8515 Z" id="Rectangle"></path>
                    </g>
                </g>
            </g>
        </svg>
    </section>

    <section class="comparison">
        <div class="container-large">
        </div>
    </section>

    <section class="cta py-lg-5">
        <div class="container-large text-center py-5">
            <a href="#" class="btn btn-success btn-block-xs get-a-quote disabled">Get a Quote</a>
        </div>
    </section>

    {# Cover #}
    {% include 'AppBundle::Default/CommonSections/_cover.html.twig' %}

    {# We do things differently #}
    {% include 'AppBundle::Default/CommonSections/_weDoThingsDifferently.html.twig' %}

    {# Reviews #}
    {% include 'AppBundle::Default/CommonSections/_reviews.html.twig' %}

    {# Page Modals #}
    {% include 'AppBundle::PhoneInsurance/_policyInfoModals.html.twig' %}

    <div class="modal fade"
        id="page_terms"
        tabindex="-1" role="dialog"
        aria-labelledby="page_terms"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Terms &amp; Conditions
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i class="fal fa-times text-white"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <ol>
                        <li>Enter the code MONEY10 into your customer dashboard within 7 days once you have bought your policy.</li>
                        <li>You will not be eligible for a voucher if the policy is cancelled or terminated within 60 days, or before the reward has been approved by so-sure.</li>
                        <li>The voucher will not be sent in conjunction with any other offer, cashback, reward or discount code unless listed on this page, or with any other discounts.</li>
                        <li>Once the above terms have been met, you will be sent an email to claim your voucher. If the voucher is unclaimed after 60 days from the date this email is sent, the claim will expire, and you will not receive your voucher.</li>
                        <li>Once you have claimed your voucher, you will be subject to the terms and conditions of the voucher provider. Please read these carefully once you have received your voucher.</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/landing.js') }}"></script>
{% endblock %}
