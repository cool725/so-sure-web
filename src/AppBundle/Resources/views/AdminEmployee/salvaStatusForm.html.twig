{% block body %}

    {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <p>Are you sure you want to change the Salva Policy Status?</p>
                </div>
            </div>
            <div class="form-group row">
                <label>Salva Status</label>
                {{ form_widget(form.status, {'attr': {'class': 'custom-select'}}) }}
            </div>
        </div>
    </div>

    <div class="modal-footer">
        {{ form_widget(form.update, { 'attr': {'class': 'btn btn-danger'} }) }}
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
    {{ form_end(form) }}

{% endblock %}
