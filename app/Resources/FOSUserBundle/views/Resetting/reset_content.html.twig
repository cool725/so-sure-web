<h1>Choose a new password</h1>
<p>Make sure it contains a mixture of letters, numbers and special charachters.</p>
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" method="POST" class="fos_user_resetting_reset" autocomplete="off">
    <div class="reset">
        <div class="reset-error">
        {{ form_errors(form.new.first) }}
        </div>
        <div class="form-group">
            <input id="fos_user_resetting_form_new_first" type="password" {% if not form.vars.valid %}class="reset-error-box"{% endif %}
                name="fos_user_resetting_form[new][first]" required="required" class="username" placeholder="New Password"/>
        </div>
        <div class="form-group">
            <input id="fos_user_resetting_form_new_second" type="password" {% if not form.vars.valid %}class="reset-error-box"{% endif %}
                name="fos_user_resetting_form[new][second]" required="required" class="password" placeholder="Confirm Password" />
        </div>
        <div class="form-group">
            <input type="hidden" id="fos_user_resetting_form__token" name="fos_user_resetting_form[_token]" value="{{ form._token.vars['value'] }}" />
            <input type="submit" value="Set password" class="btn btn-primary" />
        </div>
    </div>
</form>
