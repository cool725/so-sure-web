{% extends 'admin_claims_base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'admin-deteced-imei' %}

{% block title %}so-sure - Admin deteced IMEI{% endblock %}
{% block meta %}{% endblock %}

{% block cssPage %}
   {#  <link rel="stylesheet" href="{{ asset('css-js/homepage.css') }}"> #}
{% endblock %}

{% block body %}

    <section class="p-4 mb-5">
        <div class="container-fluid">
            {# TODO: Heading area #}
            <div class="d-lg-flex align-items-lg-center justify-content-lg-between mb-3">
                <h1 class="h2"><span class="sub">Deteced IMEI</span></h1>
            </div>
            {% if imeis|length == 0 %}
                <p class="mb-5">No records found</p>
            {% else %}
                <div class="table-responsive-sm mb-5">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Detected</th>
                                <th>Suggested</th>
                                <th>Link to file</th>
                            </tr>
                        </thead>
                        {% for imei in imeis %}
                            <tr>
                                <td>{{ imei['detected_imei'] }}</td>
                                <td>(Suggested {{ imei['suggested_imei'] }})</td>
                                <td><a href="{{ s3DownloadLink(imei['bucket'], imei['key']) }}" target="_blank" title="{{ imei.key }}"><i class="fal fa-link mr-2"></i> See image</a></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            {% endif %}
        </div>
    </section>

    {# Page Modals #}

{% endblock %}

{% block javascriptsPage %}
    {# <script src="{{ asset('css-js/homepage.js') }}"></script> #}
{% endblock %}
