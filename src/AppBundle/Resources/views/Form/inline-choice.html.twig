{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        {% if multiple %}
            <div class="custom-control custom-checkbox custom-control-inline">
        {% else %}
            <div class="custom-control custom-radio custom-control-inline">
        {% endif %}

        {{ form_widget(child) }}
        </div>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block radio_widget %}
{% spaceless %}
{% if label is empty %}
    {% set label = name|humanize %}
{% endif %}
    <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} class="custom-control-input" />
    <label class="custom-control-label" for="{{ id }}">{{ label|trans({}, translation_domain) }}</label>
{% endspaceless %}
{% endblock radio_widget %}

{% block checkbox_widget %}
{% spaceless %}
{% if label is empty %}
    {% set label = name|humanize %}
{% endif %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} class="custom-control-input" id="{{ id }}">
    <label class="custom-control-label" for="{{ id }}">{% autoescape false %}{{ label|trans({}, translation_domain) }}{% endautoescape %}</label>
{% endspaceless %}
{% endblock checkbox_widget %}
