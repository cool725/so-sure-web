{% set include_emoji = 1 %}
{% extends 'base.html.twig' %}

{% block title %}so-sure - Join today and we'll reward you!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    'bundles/app/css/Default/index.css'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}
   <div class="hero">
   <div class="container">
        <div class="row">
            <div class="text-left">
                <h4>Your friend, {{ invitation.inviter.name }}, just joined the Social Insurance revolution &amp; they'd like you to join them!</h4>
                <p>We offer better and up to 80% cheaper phone insurance designed just for friends. Find out how much you could save by getting a quote below.</p>
            </div>
        </div>
        <div class="row">
            <!-- INSERT Form_Phone from Homepage -->
            <p class="select-device">Select from the list of devices below. <a href="mailto:hello@wearesosure.com?subject=Help! I can't find my device.">Don't see your device? Send us an email.</a></p>
            <div class="row">
              <div class="signup">
                {{ form_start(form_phone) }}
                <div class="input-group">
                  {{ form_widget(form_phone.phone, { 'attr': {'class': 'form-control'}}) }}
                  <span class="input-group-btn">
                  {{ form_widget(form_phone.next, {'label': 'Quote me', 'attr': {'class': 'btn btn-success'}}) }}
                  </span>
                </div>
                {{ form_end(form_phone) }}
              </div>
            </div>
        </div>
        <div class="row">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}

            <p class="select-device text-left">Not sure why you've received this? <a href="mailto:support@wearesosure.com">Let us know</a>.</p>
        </div>
   </div>
   </div>
    {% endblock %}
