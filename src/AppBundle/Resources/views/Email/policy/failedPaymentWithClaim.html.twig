{% extends 'AppBundle:Email:base.html.twig' %}
{% import "AppBundle:Email:macros.html.twig" as macros %}
{% block title %}Payment failure for {{ policy.policyNumber }}{% endblock %}
{% block body %}
	{{ macros.start_table() }}
		<h1>
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		</h1>
		<div style="font-size: 14px; text-align: center;">
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		   <div style="font-size: 14px; text-align: center;"><span style="font-family:arial,helvetica neue,helvetica,sans-serif">
				Your monthly payment of £{{ policy.premium.monthlyPremiumPrice }} for your {{ policy.phone }} was declined.
				{% if next %}
				<br><br>
				We will attempt to process the payment again{% if policy.user.paymentMethod.cardType is defined %}, using your {{ policy.user.paymentMethod.cardType }} card ending in {{ policy.user.paymentMethod.cardLastFour }}{% endif %}, on {{ next | date('d M Y H:i', 'Europe/London') }}.
			    {% endif %}
				<br><br>
                Your policy will be canceled in {{ policy.policyExpirationDateDays }} days if you fail to make payment.                
				<br><br>
				   As a reminder, if you fail to make a payment, you will be billed for the remainder of your policy
				   premium of £{{ policy.getRemainderOfPolicyPrice|number_format(2, '.', ',') }}.
				<br><br>
			    If you have any questions, please don't hesitate to <a href="mailto:support@wearesosure.com?subject=I%20have%20a%20question" target="_blank"><span style="color:#3399ff">contact us</span></a>.
				<br><br>
		   </div>
		</div>
	{{ macros.end_table() }}
	{{ macros.email_button_table(branch_payment_details_url, "Change your payment method", "Change your payment method")}}
	{{ macros.email_button_table(branch_billing_date_url, "Change your payment date", "Change your payment date")}}
{% endblock %}
