{% extends 'admin_claims_base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
        'components/datatables.net-bs/dataTables.bootstrap.min.css'
        '@AppBundle/Resources/public/sass/page/admin.scss'
    %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'components/datatables.net/jquery.dataTables.min.js'
        'components/datatables.net-bs/dataTables.bootstrap.min.js'
        '@AppBundle/Resources/public/js/Admin/month.js'
        '@AppBundle/Resources/public/js/Admin/bacs.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
<div class="container" style="margin-bottom: 50px">

    <div class="row">
        <div class="col-md-5">
            <h1>so-sure Bacs for {{ month }} / {{ year }}</h1>
            <br>
            <form>
            <h4>Current File: {{ currentSequence.seq }}
                <button class="btn btn-success bacs-serial-edit"
                        data-toggle="modal" data-target="#editSequenceSerialNumberModal">
                    <i class="fa fa-edit"></i>
                </button>
            </h4>
            </form>
        </div>
        <form class="month-form form-inline" method="POST" autocomplete="off">
            <div class="col-md-3">
                <div class="form-group" style="padding-top: 15px;">
                    <div class="input-group date month" data-url="{{ path('admin_bacs') }}">
                        <input name="bacs" type='text' class="form-control" value="{{month}}-{{year}}" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </span>
                    </div>
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button class="btn btn-success"><i class="fa fa-arrow-right"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group" style="padding-top: 15px;">
                    <div class="btn-group">
                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#uploadModal"
                        > Upload Report</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="claimPolicyItem">
        <ul class="nav nav-tabs nav-justified">
            <li role="presentation" class="active"><a href="#dddc">Debits/Credits</a></li>
            <li role="presentation"><a href="#reports">Bacs Reports</a></li>
            <li role="presentation"><a href="#payments">Payments</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="dddc">
                <h2>Daily Files</h2>
                {% if files|length == 0 %}
                    <p>No files present</p>
                {% else %}
                    <table class="table table-striped">
                        <tr>
                            <th width="30%">File name</th>
                            <th width="50%">Details</th>
                            <th width="10%">Submitted to BACS</th>
                            <th width="10%">Edit</th>
                        </tr>
                        {% for file in files %}
                            <tr>
                                <td width="40%">
                                    {{ file.key }}
                                    <a href="{{ path('admin_bacs_file', {'id': file.id }) }}" target="_blank"><i class="fa fa-download"></i></a>
                                    <br>
                                    <a href="#" data-toggle="modal" data-target="#serialNumberModal" data-serial="{{ file.serialNumber }}"
                                       data-details-url="{{ path('admin_bacs_serial_number_details', {'serial': file.serialNumber} ) }}">
                                        {{ file.serialNumber }}
                                    </a>
                                </td>
                                <td width="50%">
                                    {{ file.metadata|json_encode }}
                                </td>
                                <td width="10%">
                                    {% if file.isSubmitted %}
                                        Yes <i class="fa fa-checkbox"></i>
                                    {% else %}
                                        <button title="Mark as submitted" type="button" class="btn btn-success bacs-submission" data-token="{{ csrf_token('default') }}"
                                                data-bacs-submission-url="{{ path('admin_bacs_submission', {'id': file.id}) }}"><i class="fa fa-power-off"></i></button>
                                    {% endif %}
                                </td>
                                <td width="10%">
                                    <button class="btn btn-success bacs-serial-edit" data-serial-number="{{ file.serialNumber }}"
                                            data-serial-number-url="{{ path('admin_bacs_update_serial_number', {'id': file.id }) }}"
                                            data-toggle="modal" data-target="#editSerialNumberModal">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
            <div role="tabpanel" class="tab-pane" id="reports">
                <h2>Input Files <span class="small">(confirmation of debit/credit)</span></h2>
                {% if input|length == 0 %}
                    <p>No files present</p>
                {% else %}
                    <table class="table table-striped">
                        <tr>
                            <th width="50%">File name</th>
                            <th width="50%">Details</th>
                        </tr>
                        {% for file in input %}
                            <tr>
                                <td width="50%">
                                    {{ file.key }}
                                    <a href="{{ path('admin_bacs_file', {'id': file.id }) }}" target="_blank"><i class="fa fa-download"></i></a>
                                </td>
                                <td width="50%">
                                    {{ file.metadata|json_encode }}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
                <div class="row" style="margin-top: 40px;">
                    <div class="col-md-8">
                        <h2>Auddis <span class="small">(Direct debit setups)</span></h2>
                    </div>
                    <div class="col-md-4">

                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#mandatesModal"
                        > Approve Mandates</button>
                    </div>
                </div>
                {% if auddis|length == 0 %}
                    <p>No files present</p>
                {% else %}
                    <table class="table table-striped">
                        <tr>
                            <th width="50%">File name</th>
                            <th width="50%">Details</th>
                        </tr>
                        {% for file in auddis %}
                            <tr>
                                <td width="50%">
                                    {{ file.key }}
                                    <a href="{{ path('admin_bacs_file', {'id': file.id }) }}" target="_blank"><i class="fa fa-download"></i></a>
                                </td>
                                <td width="50%">
                                    {{ file.metadata|json_encode }}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
                <h2>Addacs <span class="small">(Direct debit cancellations)</span></h2>
                {% if addacs|length == 0 %}
                    <p>No files present</p>
                {% else %}
                    <table class="table table-striped">
                        <tr>
                            <th width="50%">File name</th>
                            <th width="50%">Details</th>
                        </tr>
                        {% for file in addacs %}
                            <tr>
                                <td width="50%">
                                    {{ file.key }}
                                    <a href="{{ path('admin_bacs_file', {'id': file.id }) }}" target="_blank"><i class="fa fa-download"></i></a>
                                </td>
                                <td width="50%">
                                    {{ file.metadata|json_encode }}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
            <div role="tabpanel" class="tab-pane" id="payments">
                <h2>Payments</h2>
                {% if payments|length == 0 %}
                    <p>No payments present</p>
                {% else %}
                    {% set serial = '' %}
                    {% for payment in payments %}
                        {% if serial != payment.serialNumber %}
                            {% if serial != '' %}</table>{% endif %}
                            <h4>
                            {{ payment.serialNumber }}
                            {% for file in files %}
                                {% if file.serialNumber == payment.serialNumber %}
                                    (Generated: {{  file.date|date('d M Y H:i', 'Europe/London')  }})
                                {% endif %}
                            {% endfor %}
                            </h4>
                            <table class="table table-striped">
                                <tr>
                                    <th width="10%">Status</th>
                                    <th width="20%">Policy</th>
                                    <th width="5%">Amount</th>
                                    <th width="15%">Submitted Date</th>
                                    <th width="15%">Bacs Credit Date</th>
                                    <th width="15%">Bacs Reversed Date</th>
                                    <th width="20%">Actions</th>
                                </tr>
                        {% endif %}
                            <tr>
                                <td width="10%">
                                    {{ payment.status }}
                                    {% if payment.success %}
                                        <i class="fa fa-check text-success"></i>
                                    {% elseif payment.success is null %}
                                        <i class="fa fa-question"></i>
                                    {% else %}
                                        <i class="fa fa-minus text-danger"></i>
                                    {% endif %}
                                </td>
                                <td width="20%">
                                    <a href="{{ path('admin_policy', {'id': payment.policy.id}) }}">{{ payment.policy.user.name }}</a>
                                </td>
                                <td width="5%">
                                    £{{ payment.amount|number_format(2, '.', ',') }}
                                </td>
                                <td width="15%">
                                    {% if payment.submittedDate %}
                                        {{ payment.submittedDate|date('d M Y', 'Europe/London') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td width="15%">
                                    {% if payment.bacsCreditDate %}
                                        {{ payment.bacsCreditDate|date('d M Y', 'Europe/London') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td width="15%">
                                    {% if payment.bacsReversedDate %}
                                        {{ payment.bacsReversedDate|date('d M Y', 'Europe/London') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td width="20%">
                                    {% if payment.canAction %}
                                        <button title="Mark as approved" type="button" class="btn btn-success bacs-approve" data-token="{{ csrf_token('default') }}"
                                                data-bacs-approve-url="{{ path('admin_bacs_approve', {'id': payment.id}) }}">Approve</button>
                                        <button title="Mark as rejected" type="button" class="btn btn-danger bacs-reject" data-token="{{ csrf_token('default') }}"
                                                data-bacs-reject-url="{{ path('admin_bacs_reject', {'id': payment.id}) }}">Reject</button>
                                    {% elseif payment.status == 'success' or payment.status == 'failure' %}
                                        Already actioned
                                    {% else %}
                                        Wait
                                    {% endif %}
                                </td>
                            </tr>
                        {% set serial = payment.serialNumber %}
                    {% endfor %}
                    </table>
                {% endif %}

            </div>
        </div>
    </div>


    <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Bacs Report Upload</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(uploadForm) }}
                    <div class="form-group">
                        {{ form_label(uploadForm.file, 'File') }}
                        {{ form_errors(uploadForm.file) }}
                        {{ form_widget(uploadForm.file) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(uploadForm.upload, {'label': 'Upload', 'attr': {'class': 'btn btn-success'}}) }}
                    </div>
                    {{ form_end(uploadForm) }}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="mandatesModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Approve Mandates</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(mandatesForm) }}
                    <div class="form-group">
                        {{ form_label(mandatesForm.serialNumber, 'Serial number') }}
                        {{ form_errors(mandatesForm.serialNumber) }}
                        {{ form_widget(mandatesForm.serialNumber) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(mandatesForm.approve, {'label': 'Approve', 'attr': {'class': 'btn btn-success'}}) }}
                    </div>
                    {{ form_end(mandatesForm) }}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editSerialNumberModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Edit Serial Number</h4>
                </div>
                <div class="modal-body">
                    <form id="editSerialNumberForm" method="post">
                        <input type="text" id="editSerialNumber" name="serialNumber">
                        <input type="hidden" name="token" value="{{ csrf_token('default') }}" />
                        <button type="submit" class="btn btn-success">Update Serial Number</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editSequenceSerialNumberModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Edit Sequence Serial Number</h4>
                </div>
                <div class="modal-body">
                    {{ form_start(sequenceForm) }}
                    {{ form_widget(sequenceForm.seq) }}
                    {{ form_widget(sequenceForm.update, {'attr': {'class': 'btn btn-success'}}) }}
                    {{ form_end(sequenceForm) }}
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="serialNumberModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document" style="width: 60%;">
            <div class="modal-content">
                <form id="phone-update-form" class="form-horizontal" method="post">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="exampleModalLabel">Loading</h4>
                    </div>
                    <div class="modal-body">
                        <div id="serial-details-wrapper">
                            {# <table id="serial-details" width="100%" cellspacing="0" class="table-striped"></table> #}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
