{% extends 'base_rebrand.html.twig' %}

{# Set vars #}
{% set body_class = 'landing' %}
{% set include_get_a_quote = true %}

{% block title %}Welcome to Social Insurance with Starling Bank | so-sure{% endblock %}
{% block meta %}
    <meta name="description" content="Mobile Insurance in partnership with Starling Bank that's Simply Better, 24-72 hour replace or repair, Low excess from just {{ lowest_excess }} - New, second hand & refurbished phones, Up to 80% money back"/>
{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/landing.css') }}">
{% endblock %}

{% block body %}

    <section class="hero-starling">
        <div class="container-large">
            <div class="hero__intro">
                <div class="breadcrumbs">
                    <ul class="list-inline"
                        vocab="https://schema.org/"
                        typeof="BreadcrumbList">
                        <li class="list-inline-item"
                            property="itemListElement"
                            typeof="ListItem">
                            <a href="{{ path('homepage') }}"
                               class="text-columbia-blue-e"
                               property="item"
                               typeof="WebPage">
                               <span property="name">Home</span>
                            </a>
                            <meta property="position" content="1">
                        </li>
                        <li class="list-inline-item text-white">
                            <i class="fal fa-angle-right text-white"></i>
                        </li>
                        <li class="list-inline-item text-white"
                            property="itemListElement"
                            typeof="ListItem">
                            <span property="name">Starling Bank</span>
                            <meta property="position" content="2">
                        </li>
                    </ul>
                </div>
                <h1 class="mb-2 text-white h2">Simply better mobile phone insurance</h1>
                <p class="lead text-columbia-blue-e mb-4">in partnership with</p>
                <img data-src="{{ cdn_url }}/images/rebrand/partnerships/so-sure_starling_bank_logo_alt_white.svg" alt="Starling Bank" width="200px" class="d-block mb-4 mx-auto lozad">
            </div>
            <div class="hero__controls mb-4">
                <a href="#" class="btn btn-starling btn-block-xs get-a-quote disabled mb-3">Get Insured <i class="far fa-arrow-right fa-sm ml-2"></i></a><br />
                <a href="{{ path('fos_user_security_login') }}" class="text-columbia-blue-e"><u>Link Starling Account</u></a>
            </div>
            {% include 'AppBundle::Default/_comparisonTable.html.twig' %}
        </div>
        <svg class="d-none d-md-block" preserveAspectRatio="xMinYMin meet" viewBox="0 0 750 77" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <defs></defs>
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g transform="translate(0.000000, -72.000000)" fill="#ffffff">
                    <g id="---BG---" transform="translate(-4700.000000, -8443.000000)">
                        <path d="M4700,8515 C4824,8551 4948.66667,8569 5074,8569 C5199.33333,8569 5324.66667,8551 5450,8515 L5450,8592 L4700,8592 L4700,8515 Z" id="Rectangle"></path>
                    </g>
                </g>
            </g>
        </svg>
    </section>

    <section class="comparison">
        <div class="container-large">
        </div>
    </section>

    <section class="why py-lg-5 mt-lg-5">
        <div class="container-large py-5 mt-lg-5">
            <div class="row">
                <div class="col-md-4">
                    <div class="why__container">
                        <img data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_phone-smile.png" alt="so-sure - 24-72 hour replacement" width="180px" class="lozad">
                        <h4 class="text-dodger-blue">24-72 hour replace or repair</h4>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="why__container">
                        <img data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_wallet-cashback.png" alt="so-sure - Up to 80% money back" width="180px" class="lozad">
                        <h4 class="text-dodger-blue">Up to 80% money back</h4>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="why__container">
                        <img data-src="{{ cdn_url }}/images/rebrand/icns/so-sure_icon_phone-qr.png" alt="so-sure - Low excess from just Â£50" width="180px" class="lozad">
                        <h4 class="text-dodger-blue">Low excess from just {{ lowest_excess }}</h4>
                    </div>
                </div>
            </div>
            <div class="text-center mt-5">
                <a href="#" class="btn btn-primary btn-block-xs get-a-quote disabled">Get Insured in minutes</a>
            </div>
        </div>
    </section>

    {# Cover #}
    {% include 'AppBundle::Default/CommonSections/_cover.html.twig' %}

    {# We do things differently #}
    {% include 'AppBundle::Default/CommonSections/_weDoThingsDifferently.html.twig' %}

    {# Reviews #}
    {% include 'AppBundle::Default/CommonSections/_reviews.html.twig' %}

    {# Page Modals #}
    {% include 'AppBundle::PhoneInsurance/_policyInfoModals.html.twig' %}

{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/landing.js') }}"></script>
{% endblock %}
