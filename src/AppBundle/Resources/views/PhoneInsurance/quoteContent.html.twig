{% extends 'base.html.twig' %}

{# Set vars #}
{% set new_stylesheet = 1 %}
{% set include_emoji = 1 %}

{% block title %}{{ phone.model }} Insurance - {{ phone.make }} - so-sure: Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="For a small monthly fee your phone is covered for theft, loss, accidental damage and unauthorised usage."/>
    <link rel="canonical" href="{{ url('quote_make_model', {'make': phone.makeCanonical, 'model': phone.encodedModelCanonical}) }}" />

    <meta property="og:video" content="https://cdn.so-sure.com/video/explainer-subtitle-640.mp4" />
    <meta property="og:video:secure_url" content="https://cdn.so-sure.com/video/explainer-subtitle-640.mp4" />
    <meta property="og:video:type" content="video/mp4" />
    <meta property="og:video:width" content="640" />
    <meta property="og:video:height" content="360" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
    '@AppBundle/Resources/public/sass/page/quoteContent.scss'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}
    <section class="section--pad quote__top">
        <div class="container">
            <h1>
            {% if coming_soon %}
                <span>Better cover for your</span>
            {% else %}
                <span>Insurance for your</span>
            {% endif %}
            {{ phone.make }} {{ phone.model }} <small>({{ phone.memory }}GB)</small><br>
            {% if coming_soon %}
                <span class="text-nowrap">is coming soon!</span>
                <p><a href="mailto:hello@wearesosure.com" class="open-intercom">Tell me when</a> it's available.</p>
                <p>
                    <strong>£4.99 - £9.99 per month</strong><br>
                    <small>(typical policy pricing)</small>
                <p>
            {% else %}
                <span class="text-nowrap text-blue">£{{ phone_price.monthlyPremiumPrice }} per month</span>
            {% endif %}
            </h1>
            {% if not coming_soon %}
            {# CTA #}
            <div class="quote__cta">
                <div class="form-group">
                    {{ form_start(buy_form) }}
                        {{ form_widget(buy_form.buy_tablet, {'label': 'Get Started', 'attr': {'class': 'btn btn-green btn-lg btn-pad btn-block'}}) }}
                    {{ form_end(buy_form) }}
                </div>
            </div>
            {% endif %}

            {% if phones | length > 1 %}
            <a class="btn btn-link" role="button" data-toggle="collapse" href="#collapsePhones" aria-expanded="false" aria-controls="collapsePhones">Not your phone?</a>
            <div class="collapse" id="collapsePhones">
                <div class="btn-group" role="group">
                    {% for phone_mem in phones %}
                        <a {% if phone_mem.id != phone.id  %}href="{{ path('quote_make_model_memory', {'make': phone_mem.makeCanonical, 'model': phone_mem.encodedModelCanonical, 'memory': phone_mem.memory}) }}"{% else %}disabled{% endif %} class="btn {% if phone_mem.id == phone.id  %}btn-blue{% else %}btn-blue-hollow{% endif %}">{{ phone_mem.memory }}GB</a>
                    {% endfor %}
                </div>
                <br>
                <a class="btn btn-link" href="#" data-toggle="modal" data-target="#quoteModal"><u>I have a different phone</u></a>
            </div>
            {% else %}
            <a href="#" class="btn btn-link" role="button" data-toggle="modal" data-target="#quoteModal"><u>I have a different phone</u></a>
            {% endif %}
        </div>
    </section>

    <section class="section--pad quote__bottom">
        <div class="container">
            <div class="row">
               <div class="col-md-4">
                    <h3>We always cover:</h3>
                    <ul class="list-unstyled fa-list-bullet">
                        <li><i class="fa fa-check text-green" aria-hidden="true"></i> Theft</li>
                        <li><i class="fa fa-check text-green" aria-hidden="true"></i> Loss</li>
                        <li><i class="fa fa-check text-green" aria-hidden="true"></i> Out of warranty breakdown</li>
                        <li><i class="fa fa-check text-green" aria-hidden="true"></i> Water damage</li>
                        <li><i class="fa fa-check text-green" aria-hidden="true"></i> Cracked screen</li>
                        <li><i class="fa fa-check text-green" aria-hidden="true"></i> Worldwide cover</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h3>What we offer:</h3>
                    <ul class="list-unstyled fa-list-bullet">
                        <li><i class="fa fa-check text-blue" aria-hidden="true"></i> Working device within 72 hours</li>
                        <li><i class="fa fa-check text-blue" aria-hidden="true"></i> 24/7 live support</li>
                        <li><i class="fa fa-check text-blue" aria-hidden="true"></i> Insure used phones</li>
                        <li><i class="fa fa-check text-blue" aria-hidden="true"></i> Instant cover when you purchase your policy</li>
                        <li><i class="fa fa-check text-blue" aria-hidden="true"></i> Up to 80% cashback every year</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    {# TrustBox widget - Mini #}
                    <div class="trustpilot-widget" data-locale="en-GB" data-template-id="5419b732fbfb950b10de65e5" data-businessunit-id="588f81d20000ff00059bc1e1" data-style-height="24px" data-style-width="100%" data-theme="light" style="margin:25px 0 0;">
                    <a href="https://uk.trustpilot.com/review/wearesosure.com" target="_blank">Trustpilot</a>
                    </div>
                    {# End TrustBox widget #}
                    <img src="{{ cdn_url }}/images/press/ebay_so-sure_defaqto.svg" alt="Defaqto" title="Defaqto" class="homepage__press_defaqto img-center" width="200px">
                </div>
            </div>
        </div>
    </section>

    <section class="section--pad quote__excess">
        <div class="container">
            <div class="row">
                <h2 class="text-center">Our Excess</h2>
                <div class="col-md-4">
                    <p class="so-sure-smile">When you validate that your phone is in good working condition via our app your excess is reduced to just <strong>£50 accidental damage/breakdown, £70 for loss and theft</strong>.</p>
                </div>
                <div class="col-md-4">
                    <p class="so-sure-smile">Not only that, should you make a claim, it becomes an easier and speedier process, and we dont ask you to provide proof of purchase.</p>
                </div>
                <div class="col-md-4">
                    <p class="so-sure-smile so-sure-sad">If you do not validate your phone, your excess will be £150 and your claims process may take some more time.</p>
                </div>
            </div>
            <div class="row">
                {{ form_start(buy_form_banner, {'attr':{'class':'col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4'}}) }}
                    {{ form_widget(buy_form_banner.buy, {'label': 'Get Started', 'attr': {'class': 'btn btn-green btn-lg btn-pad btn-block'}}) }}
                {{ form_end(buy_form_banner) }}
            </div>
        </div>
    </section>

    {# How do the reward pot work? #}
    <section id="reward-pot" class="section--pad background-off-white">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <h2 class="text-blue">Get up to 80% cashback a year</h2>
                    <p>Fill your reward pot buy connecting to friends</p>
                    <br>
                    <div class="video-container">
                        <iframe id="exp-vid" src="https://player.vimeo.com/video/185840373??api=1&player_id=vimeoplayer&title=0&byline=0&portrait=0" width="800" height="450"  frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section--pad quote__reward-pot">
        <div class="container">
            <div id="loading-overlay-init" class="loading-overlay" style="display:block;"></div>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="text-center">The reward pot explained</h2>
                    <p class="text-center lead">If you and your friends take good care of your phones and don’t need to claim, we’ll give you up to 80% of your premium back at the end of your policy year.</p>

                    {# Set the start friends amount #}
                    {% set start_friends = max_connections / 2 %}

                    {% set start_friends_rounded = start_friends|round() %}

                    {# Set the amount of cashback #}
                    {% set start_value = start_friends_rounded  * connection_value %}

                    {# If greater than max pot, pot max is start value #}
                    {% if start_value > max_pot %}
                        {% set start_value = max_pot %}
                    {% endif %}

                    {# Start amount and work out monthly #}
                    {% set start_premium = annual_premium - start_value %}
                    {% set monthly_premium = start_premium / 12 %}

                    <h4 class="text-blue text-center">
                        Effective monthly premium after cashback:<br><small>(Cashback paid out end of policy year)</small>
                    </h4>

                    <div class="reward-slider">

                        <div class="slide-me">
                            <img src="{{ cdn_url }}/images/quote-page/so-sure_arrow-slide-me.svg" alt="">
                        </div>

                        <output for="range" class="rewardslider__output">
                            <span id="premium" class="h3 text-white">£{{ monthly_premium|number_format(2, '.', ',') }}</span><br>
                            <small class="text-nowrap">per month</small>
                        </output>
                        <input type="range"
                               id="reward-slider"
                               autocomplete="off"
                               min="0"
                               max="{{ max_connections }}"
                               value="{{ start_friends_rounded }}"
                               data-maxpot="{{ max_pot }}"
                               data-connection-value="{{ connection_value }}"
                               data-premium="{{ annual_premium }}"
                               data-monthly-premium="{{ monthly_premium }}">
                    </div>
                    <h4 class="text-blue text-center">Number of connections</h4>
                    <p class="lead text-center">Get cashback by connecting to friends. <br> Save money on your premium when you and your friends don't claim.</p>
                </div>
            </div>
        </div>
    </section>

    {% if feature_enabled('quote-lead') and coming_soon == false and phone.initialPrice > 0 %}
        <section class="section--pad quote__save">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        {# Save Quote #}
                        <h2 class="text-white h3">Guarantee this price for the next 7 days</h2>
                        {{ form_start(lead_form, {'attr': {'class': ' quote__save'}}) }}
                            <div class="form-group">
                                {{ form_label(lead_form.email, 'Your email:', { 'label_attr': {'class': 'sr-only'} }) }}
                                {{ form_widget(lead_form.email, {'attr':{'class':'form-control', 'placeholder': 'Enter your email'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(lead_form.save, {'label': 'Save your quote', 'attr': {'class': 'btn btn-white-hollow btn-pad'}}) }}
                            </div>
                        {{ form_end(lead_form) }}
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    {% include 'AppBundle::Default/faqs.html.twig' %}

    {# Page Modals #}

    {# {% include 'AppBundle::Default/modalVideo.html.twig' %} #}

    <div class="modal modal-fullscreen fade"
         id="policy-modal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="So-Sure Policy Terms"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body modal-policy" data-url="{{ url('latest_policy_terms', {'policy_key': policy_key, 'maxPotValue':  max_pot, 'include': true, 'noH1': true }) }}">
                    <div class="text-center" style="margin-bottom: 20px;">
                        <img src="{{ cdn_url }}/images/spinner.svg" alt="Loading..."><br>
                        <a href="#" id="reload-policy" class="btn btn-blue-hollow" style="display:none;"><i class="fa fa-refresh" aria-hidden="true"></i> reload</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade"
         id="calculation-details"
         tabindex="-1"
         role="dialog"
         aria-labelledby="Calculation Details"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h3>Calculation Details</h3>
                </div>
                <div class="modal-body">
                    <p><strong>How we calculate this:</strong></p>
                    <p>Prices based on data available from competitor websites, last updated on 1 February 2017.  </p>
                    <p>Networks taken as an average of O2, Vodafone, and Three.</p>
                    <p>High Street is Car Phone Warehouse.</p>
                </div>
            </div>
        </div>
    </div>

    {% include 'AppBundle::Default/modalQuote.html.twig' with {'selectPhoneMakeType': 'other_pages'} %}
    {# End Page Modals #}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/dot/doT.min.js'
    'components/corejs-typeahead/typeahead.bundle.min.js'
    'components/fuse.js/fuse.min.js'
    'components/rangeslider.js/rangeslider.min.js'
    '@AppBundle/Resources/public/js/Default/sliderNew.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMakeSearch.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMakeDropdown.js'
    '@AppBundle/Resources/public/js/Default/bannerSticky.js' %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}
