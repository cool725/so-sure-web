{% extends 'base.html.twig' %}

{# Set vars #}
{% set new_stylesheet = 1 %}
{% set new_footer = 1 %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
    '@AppBundle/Resources/public/sass/page/user.scss'%}
    <link rel="stylesheet" href="{{ asset_url }}"> {% endstylesheets %}
{% endblock %}

{% block body %}

    {% include 'AppBundle:User:userNav.html.twig' %}

    <section class="user-homepage--content section--pad">
        <div class="container">

            <h2>Your Contact Details</h2>

            <div class="row">
                <div class="col-sm-6">
                    <h4>Email</h4>
                    <p>{{ user.email }} </p>
                    <button type="button" class="btn btn-blue-hollow" data-toggle="modal" data-target="#email-modal">Edit</button>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <h4>Communication Preferences</h4>
                    <p><a href="{{ path('optout') }}">Manage my preferences</a></p>
                </div>
            </div>

        </div>
    </section>

    <div class="modal fade" id="email-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            {{ form_start(email_form) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Edit Email</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        {{ form_label(email_form.email, 'Email') }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(email_form.email) }}
                        {{ form_widget(email_form.email, {'attr': { 'class':'form-control'} }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(email_form.update, {'label': 'Update', 'attr': {'class': 'btn btn-success btn-block btn-pad'}}) }}
                    </div>
                </div>
            {{ form_end(email_form) }}
            </div>
        </div>
    </div>

{% endblock %}
