{% extends 'base.html.twig' %}

{% set white_logo = true %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/vimeo-player-js/player.min.js'     
    'bundles/app/js/User/index.js'
    '@AppBundle/Resources/public/js/Default/modalVideo.js'  %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}


{% block stylesheets %}
{{ parent() }}
{% stylesheets
    '@AppBundle/Resources/public/css/User/index.css'
    '@AppBundle/Resources/public/css/Default/modal.css'
    '@AppBundle/Resources/public/css/Default/videoOverlay.css'
%}
<link rel="stylesheet" href="{{ asset_url }}">
{% endstylesheets %}
{% endblock %}

{% block gtm_data %}
    ,
    'policy': {
        'id': '{{ policy.id }}'
    },
    'affilinet': {
        'rate': {% if policy.getPremiumPlan == 'monthly'%}1{% elseif policy.getPremiumPlan == 'yearly' %}2{% else %}-1{% endif %},
        'gwp': {% if policy.getPremiumPlan == 'monthly'%}{{ policy.premium.gwp }}{% elseif policy.getPremiumPlan == 'yearly' %}{{ policy.premium.yearlyGwp }}{% else %}0{% endif %}
    }
{% endblock %}

{% block body %}

    <section class="user-welcome--info">
        <div class="container">
            <h1 class="text-center text-white">Welcome to so-sure {{ policy.user.firstname }}</h1>
            <p class="lead text-center text-white">You'll receive a confirmation email with full details of your policy shortly, but here's a summary:</p>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="box-border-grey">
                        <h3>Cover</h3>
                        <ul class="list-unstyled lead">
                            <li>Your <strong>{{ policy.phone.make }} {{ policy.phone.model }} ({{ policy.phone.memory }}GB)</strong> is now insured!</li>
                            <li>Your policy number is <strong>{{ policy.policyNumber }}</strong></li>
                            <li>Your phone is now protected against Theft, Loss, Accidental Damage and Breakdown ðŸ˜„</li>
                            <li>
                                <ul class="list-inline text-center">
                                    <li><a data-toggle="modal" data-target="#policyModal" class="btn btn-primary btn-rounded">Policy Details</a></li>
                                    <li><a href="{{ path('user_home') }}" class="btn btn-primary btn-rounded">Go to my account</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="box-border-grey">
                        <h3>Cost</h3>
                        <ul class="list-inline">
                            <li>
                                You have chosen to pay
                                &pound;{% if policy.getPremiumPlan == 'monthly'%}{{ policy.premium.monthlyPremiumPrice|number_format(2, '.', ',') }} per month 
                                {% elseif policy.getPremiumPlan == 'yearly' %}{{ policy.premium.yearlyPremiumPrice|number_format(2, '.', ',') }} for your policy
                                {% else %}Unknown{% endif %}
                                and your policy is in effect from {{ policy.start|date('jS F Y') }} until {{ policy.end|date('jS F Y') }}.                                
                            </li>
                            {% if policy.user.paymentMethod.cardType is defined %}
                            <li>
                                {% if policy.getPremiumPlan == 'monthly'%}
                                    Your card {{ policy.user.paymentMethod.cardType }} (ending in {{ policy.user.paymentMethod.cardLastFour }}) will be billed &pound;{{ policy.premium.monthlyPremiumPrice|number_format(2, '.', ',') }} every month on the {{ policy.expectedBillingDate|date('jS') }}.
                                {% elseif policy.getPremiumPlan == 'yearly' %}
                                    Your card {{ policy.user.paymentMethod.cardType }} (ending in {{ policy.user.paymentMethod.cardLastFour }}) was billed &pound;{{ policy.premium.yearlyPremiumPrice|number_format(2, '.', ',') }}.
                                {% endif %}                                
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="start-saving section--pad">
        <div class="row">
            <h2 class="text-center text-light-blue">Together we're better.<br/>Start Sharing&nbsp;&nbsp;<span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>&nbsp;&nbsp;Start Saving</h2>
        </div>
    </section>

    <section class="user-welcome--steps">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="box-border-grey">
                        <h3>1. Download our Award Winning App</h3>
                        <p class="lead">Install the app and login to start saving money!</p>
                        {% if policy.phone.isITunes %}
                        <div class="download-btn center">
                            <a class="ga-outbound-click" data-clicklabel="iTunes" href="{{ apple_download('welcome') }}" target="_blank"><img src="{{ cdn_url }}/images/icons/download-badge-app-store-dark.svg" alt="Download so-sure on the App Store"></img>
                            </a>
                        </div>
                        {% endif %}
                        {% if policy.phone.isGooglePlay %}
                        <div class="download-btn text-center">
                            <a class="ga-outbound-click" data-clicklabel="PlayStore" href="{{ google_download('welcome') }}" target="_blank"><img src="{{ cdn_url }}/images/icons/download-badge-google-play-dark.svg" alt="Get so-sure on Google Play"></img>
                            </a>
                        </div>
                        {% endif %}                        
                    </div>
                </div>
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="box-border-grey">
                        <h3 class="text-center">2. Sign up friends &amp; connect</h3>
                        <p class="lead text-center">Get up to 80% cashback <br>Watch our video below to learn more. ðŸ“ºðŸ‘€</p>
                        <div class="explainer-video-thumb">
                            <a class="explainer-video-view-thumb" data-toggle="modal" data-target="#modal-fullscreen">
                                <img src="{{ cdn_url }}/images/home/explainer-video/explainer-video-frame-2.png" class="img-responsive">
                            </a>
                        </div> 
                        <p class="text-center">
                        <a href="{{ path('user_home') }}" class="btn btn-primary btn-rounded">3. Go to my account to get started</a></p>                  
                    </div>
                </div>  
            </div>
        </div>
    </section>
    
    <div class="modal modal-policy fade" id="policyModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Policy</h4>
                </div>
                <div class="modal-body">
                    {{ render(controller('AppBundle:ApiView:policyLatestTerms', {'policy_key': policy_key, 'maxPotValue':  policy.maxPot })) }}
                </div>
            </div>
        </div>
    </div>

    {# Page Modals #}

    {% include 'AppBundle::Default/modalVideo.html.twig' %}    

{% endblock %}
