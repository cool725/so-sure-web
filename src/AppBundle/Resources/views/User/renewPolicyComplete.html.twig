{% extends 'base_rebrand.html.twig' %}
{% form_theme renew_connections_form with ['AppBundle:Form:fields.html.twig', 'AppBundle:Form:submit.html.twig'] %}

{# Set vars #}
{% set body_class = 'user' %}
{% set user_mode = true %}

{% block title %}so-sure -  Policy renewed{% endblock %}

{% block cssPage %}
    <link rel="stylesheet" href="{{ asset('css-js/user.css') }}">
    <link rel="stylesheet" href="{{ asset('css-js/user-renew.css') }}">
{% endblock %}

{% block body %}

    <section class="hero">
        <div class="container">
            <h1 class="h2 mb-4">Thank you for renewing your policy ðŸ¤—</h1>
            {% if policy.hasCashback %}
                <p class="lead">Your cashback request was received and will be processed <u>28-45</u> days after your policy has ended.</p>
            {% endif %}
            <div class="d-lg-flex justify-content-lg-between mb-4">
                <div class="cardbox cardbox-100 mb-4 mr-lg-4">
                    <div class="cardbox__body">
                        <h5 class="cardbox__title">
                            Your policy
                        </h5>
                        <div class="cardbox__text">
                            <div class="h4">
                                {{ policy.policyNumber }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cardbox cardbox-100 mb-4 mr-lg-4">
                    <div class="cardbox__body">
                        <h5 class="cardbox__title">
                            Your renewal date
                        </h5>
                        <div class="cardbox__text">
                            <div class="h4">
                                {{ policy.nextPolicy.start|date("d/m/Y") }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cardbox cardbox-100 mb-4">
                    <div class="cardbox__body">
                        <h5 class="cardbox__title">
                            Your premium
                        </h5>
                        <div class="cardbox__text">
                            <div class="h3">
                                {% if policy.nextPolicy.getPremiumPlan == 'monthly' %}
                                    &pound;{{ policy.nextPolicy.premium.adjustedStandardMonthlyPremiumPrice|number_format(2, '.', ',') }} <span class="sub">per month</span>
                                {% else %}
                                    &pound;{{ policy.nextPolicy.premium.adjustedYearlyPremiumPrice|number_format(2, '.', ',') }} <span class="sub">per year</span>
                                {% endif %}
                            </div>
                            {% if policy.nextPolicy.getPremiumPlan == 'monthly' %}
                                {% if policy.nextPolicy.premium.hasAnnualDiscount %}
                                    including discount of &pound;{{ policy.nextPolicy.premium.getMonthlyDiscount|number_format(2, '.', ',') }} each month
                                {% endif %}
                            {% else %}
                                {% if policy.nextPolicy.premium.hasAnnualDiscount %}
                                    including discount of &pound;{{ policy.nextPolicy.premium.annualDiscount|number_format(2, '.', ',') }} for the year
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% if renew_connections_form.renewalConnections|length > 0%}
                <p class="mb-4">Make sure that you continue to get your pot reward next year by renewing all your existing connections</p>
                {{ form_start(renew_connections_form) }}
                    <div class="row">
                        {% for renewalConnection in renew_connections_form.renewalConnections %}
                            <div class="col-lg-4">
                                <div class="d-flex justify-content-start align-items-center connection mb-4 p-3">
                                    <img src="{{ renewalConnection.vars.data.linkedUser.getImageUrlFallback }}" alt="{{ renewalConnection.vars.data.linkedUser.name }}"
                                         title="{{ renewalConnection.vars.data.linkedUser.name }}"
                                         width="40px"
                                         class="mr-3 rounded-circle {% if renewalConnection.vars.data.linkedPolicy.hasMonetaryClaimed %}border-danger{% endif %}">
                                    <span class="h6 mb-0">{{ renewalConnection.vars.data.linkedUser.name }}</span>
                                    <span class="ml-auto">{{ form_row(renewalConnection.renew) }}</span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="form-group">
                        <a href="{{ path('user_home') }}"
                           class="btn btn-outline-primary btn-block-xs mr-md-2">Back</a>
                        {{ form_widget(renew_connections_form.save, {'attr': {'class': 'btn btn-success btn-block-xs'}}) }}
                    </div>
                {{ form_end(renew_connections_form) }}
            {% else %}
                <a href="{{ path('user_home') }}"
                   class="btn btn-outline-primary btn-block-xs">Back</a>
            {% endif %}
        </div>
    </section>

    {# Page Modals #}


{% endblock %}

{% block javascriptsPage %}
    <script src="{{ asset('css-js/user-renew.js') }}"></script>
{% endblock %}
