<?xml version="1.0"?>
<ruleset name="PeerJStandard">
 <description>PeerJ custom coding standard.</description>
 <!-- No need to exclude LineLength inside PSR2 rule as explicitly configured below -->
 <rule ref="PSR2" />
 <rule ref="Generic.Files.LineLength">
  <exclude-pattern>peerj/AnnotationBundle/*</exclude-pattern>
  <exclude-pattern>peerj/ArticleBundle/*</exclude-pattern>
  <exclude-pattern>peerj/ComBundle/*</exclude-pattern>
  <exclude-pattern>peerj/EventBundle/*</exclude-pattern>
  <exclude-pattern>peerj/FeedbackBundle/*</exclude-pattern>
  <exclude-pattern>peerj/PaymentBundle/*</exclude-pattern>
  <exclude-pattern>peerj/PublicationBundle/*</exclude-pattern>
  <exclude-pattern>peerj/SearchBundle/*</exclude-pattern>
  <exclude-pattern>peerj/SubjectBundle/*</exclude-pattern>
  <exclude-pattern>peerj/SubmitBundle/*</exclude-pattern>
  <exclude-pattern>peerj/UploadBundle/*</exclude-pattern>
  <exclude-pattern>peerj/UserBundle/*</exclude-pattern> 
 </rule>

 <rule ref="PEAR.Commenting.FunctionComment">
   <exclude name="PEAR.Commenting.FunctionComment.MissingParamComment" />
   <exclude name="PEAR.Commenting.FunctionComment.MissingReturn" />
   <exclude name="PEAR.Commenting.FunctionComment.MissingParamTag" />
   <exclude name="PEAR.Commenting.FunctionComment.MissingParamName" />
   <exclude name="PEAR.Commenting.FunctionComment.Missing" />
 </rule>
</ruleset>
