<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request" autocomplete="off">
    <div class="container">
        <h1>Need a new password? No problem.</h1>
        <p>Just enter your email below and we'll send you link to reset it.</p>
        <div class="form-group">
            <input type="text" id="username" name="username" required="required" class="form-control reset" placeholder="Email Address"/>
        </div>
        {% if invalid_username is defined %}
            <p class="error-text">Invalid email address</p>
        {% endif %}
        <div class="form-group" >
            <input type="submit" value="Send me a link!" class="btn btn-primary" />
        </div>
    </div>
</form>
