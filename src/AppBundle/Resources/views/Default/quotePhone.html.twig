{% set include_emoji = 1 %}
{% extends 'base.html.twig' %}

{% block title %}so-sure -
    {{ phone }}{% endblock %}
{% block meta %}
    <meta name="description" content="For a small monthly fee your phone is covered for theft, loss, accidental damage and unauthorised usage."/>
    <meta name="keywords" content="mobile insurance, phone insurance, mobile phone insurance, cheap mobile phone insurance, cheap phone insurance, cheap mobile insurance, better phone insurance, better mobile phone insurance"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/seiyria-bootstrap-slider/bootstrap-slider.min.js'
    'bundles/app/js/Default/slider.js'
    '@AppBundle/Resources/public/js/Default/modalVideo.js'
    '@AppBundle/Resources/public/js/Default/index.js'
 %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'bundles/app/css/Default/index.css' 'bundles/app/css/Default/quotePhone.css' 'components/seiyria-bootstrap-slider/bootstrap-slider.min.css' 'bundles/app/css/Default/connections.css' 'bundles/app/css/Default/scrollindicator.css' %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}
    <section class="view-quote light-gradient">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6 text-left main-cta">
                              <h1>Welcome to better phone insurance</h1>
                              <p class="lead">
                                Finally, phone insurance that you can rely on (it's also up to 80% cheaper when you connect with friends &amp; don't claim).
                              </p>
                                  <div class="explainer-video-thumb">
                                      <a class="explainer-video-view-thumb" data-toggle="modal" data-target="#modal-fullscreen">
                                          <div class="explainer-video-frame-thumb">
                                              <div class="explainer-video-overlay"></div>
                                          </div>
                                          <p>
                                            How does so-sure work?
                                          </p>
                                      </a>
                                      <p>
                                      </p>
                                  </div>
                            </div>
                            <div class="col-md-6">
                                <h3 class="text-center">Your quote</h3>
                                <div class="panel panel-primary">
                                    <div class="quote-panel-left">
                                        <div class="row">
                                            <span>
                                                <p>Device</p>
                                                <h4>{{ phone }}</h4>
                                                {% if phones | length > 1 %}
                                                    <div class="memory-select-text">
                                                        Or do you have:
                                                        {% for phone_mem in phones if phone_mem.id != phone.id %}
                                                            <a href="{{ path('quote_make_model_memory', {'make': phone_mem.make, 'model': phone_mem.encodedModel, 'memory': phone_mem.memory}) }}" class="btn btn-link">{{ phone_mem.memory }}GB</a>
                                                        {% endfor %}
                                                    </div>
                                                {% endif %}
                                                <br>
                                                <p>Monthly Cost</p>
                                                <h4>£{{ phone_price.monthlyPremiumPrice }}</h4>
                                                <br>
                                                <p>Covered for</p>
                                                <h4>Theft, Loss, Accidental Damage &amp; Breakdown</h4>
                                                <p>
                                                    <a href="#" data-toggle="modal" data-target="#more-info">More details (including excess)</a>
                                                </p>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row" style="border-top: 2px solid #efefef; font-size: 14px; padding-top: 10px; width: 100%; margin: 0;">
                                        <div class="col-sm-12">
                                            <p class="text-center">
                                                Not your device? Select another phone
                                                <a href="/#get-quote">here</a>.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="banner brand-gradient start-purchase">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 text-left">
                    <h3 class="text-white">
                        Ready to be part of an insurance revolution?
                    </h3>
                </div>
                <div class="col-sm-2">
                    <a class="btn btn-primary btn-rounded" href="{% if app.user is not null and app.user %}{{ path('purchase') }}{% else %}{{ path('register') }}{% endif %}">Buy online</a>
                </div>
                <div class="col-sm-2">
                    <h4 class="text-white text-center">OR</h4>
                </div>
                <div class="col-sm-2 app-badge">
                    <a class="ga-outbound-click" href="{{ apple_download('quotepage') }}">
                        <img src="{{ cdn_url }}/images/icons/app-store-original.svg" alt="Download it on the App Store"></img>
                    </a>
                </div>
                <div class="col-sm-2 app-badge">
                    <a class="ga-outbound-click" href="{{ google_download('quotepage') }}">
                        <img src="{{ cdn_url }}/images/icons/google-play-original.svg" alt="Get it on Google Play"></img>
                    </a>
                </div>
            </div>
        </div>
    </section>

    {% include 'AppBundle::Default/benefits.html.twig' %}

    {% include 'AppBundle::Default/howItWorks.html.twig' %}

    <section class="text-block light-gradient">
        <div class="container">
            <h2 class="text-center">
                Still not sure?
            </h2>
            <p class="lead text-center" id="hero-description">
                Chat with our
                <a id="open-intercom" href="mailto:bjo63djg@incoming.intercom.io">team</a>
                or visit our
                <a href="https://help.wearesosure.com">Help Centre</a>, which has lots of useful information.
            </p>
        </div>
    </section>

    <div class="modal fade" id="more-info" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Coverage Summary</h4>
                </div>
                <div class="modal-body">
                    <h4>What you are covered for?</h4>
                    <p>If you take reasonable care of your phone and don't knowingly put it at risk you are covered for:</p>
                    <ul>
                        <li>Theft</li>
                        <li>Accidental Damage</li>
                        <li>Breakdown (including faults)</li>
                        <li>Loss</li>
                    </ul>
                    <br>
                    <p>In the event of theft or loss you are also covered for:</p>
                    <ul>
                        <li>Unauthorised network charges (up to £1,000 including VAT)</li>
                        <li>Accessories (e.g. headphones - up to £100 including VAT)</li>
                    </ul>
                    <br>
                    <h4>What you are NOT covered for?</h4>
                    <ul>
                        <li>Excess – You need to pay each time you make a successful claim. £50 for Damage or Breakdown. £70 for Theft or Loss.</li>
                        <li>More than two theft or loss claims in the same year.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-buy fade" id="buyModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                {{ form_start(lead_form) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title text-center">Ready to join the Social Insurance revolution?</h3>
                </div>
                <div class="modal-body text-center">
                    <p class="lead">Just enter your email below to get started!</p>
                    <div class="row">
                        <div class="form-group col-sm-12">
                            {{ form_errors(lead_form.email) }}
                            {{ form_widget(lead_form.email, {'attr': {'placeholder': 'Email address'}}) }}
                            {{ form_widget(lead_form.save, {'label': 'Continue', 'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_rest(lead_form) }}
                        </div>
                    </div>
                    {{ form_end(lead_form) }}
                    <div class="download-app-modal">
                        <div class="text-break">
                            <div class="line"></div>
                            OR
                            <div class="line"></div>
                        </div>
                        <div class="row" style="padding-bottom: 30px;">
                            <p class="lead">Download our app - it's a little bit easier.</p>
                            <div class="col-md-6 text-right">
                                <a class="ga-outbound-click" href="{{ apple_download('modal') }}">
                                    <img src="{{ cdn_url }}/images/icons/app-store-original.svg" alt="Download it on the App Store"></img>
                                </a>
                            </div>
                            <div class="col-md-6 text-left">
                                <a class="ga-outbound-click" href="{{ google_download('modal') }}">
                                    <img src="{{ cdn_url }}/images/icons/google-play-original.svg" alt="Get it on Google Play"></img>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'AppBundle::Default/modalVideo.html.twig' %}

{% endblock %}
