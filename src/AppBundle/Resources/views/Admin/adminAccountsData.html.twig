        <td>£{{ rewardPromoPotLiability|number_format(2, '.', ',') }}</td>
    </tr>
    <tr>
        <td width="{{ indent_width }}"></td>
        <td>Annual Run Rate Premium</td>
        <td>£{{ paymentTotals.totalRunRate|number_format(0, '.', ',') }}</td>
    </tr>
</table>
