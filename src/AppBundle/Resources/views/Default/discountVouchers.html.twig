{% if referral != '' %}
    {% set og_title = 'Join today & get rewarded' %}
    {% set og_image = cdn_url ~ '/images/so-sure-welcome.png' %}
{% endif %}
{% extends 'base.html.twig' %}

{% set white_logo = true %}

{% block title %}so-sure - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends don't claim. Download our app now to see how much you could save."/>
    <meta name="keywords" content="mobile phone insurance, social insurance"/>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
    '@AppBundle/Resources/public/sass/page/homepage.scss'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/vimeo-player-js/player.min.js'
    'components/typeahead.js/typeahead.bundle.min.js'
    'components/fuse.js/fuse.min.js'
    '@AppBundle/Resources/public/js/Default/index.js'
    '@AppBundle/Resources/public/js/Default/modalVideo.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMake.js'
 %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

{% block body %}

    <section class="hero" id="get-quote">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>The insurance revolution is here</h1>
                    <h3 class="text-light-blue">Mobile phone insurance is finally worth it</h3>
                    <ul class="list-unstyled fa-list-bullet">
                        <li class="text-white"><i class="fa fa-check-circle fa-lg" aria-hidden="true"></i> Next working day replacement or repair</li>
                        <li class="text-white"><i class="fa fa-check-circle fa-lg" aria-hidden="true"></i> Up to Â£80 cash back</li>
                    </ul>
                    {{ render(controller('AppBundle:Default:selectPhoneMake', {'type':'homepage'})) }}
                </div>
            </div>
        </div>
    </section>

    {% include 'AppBundle::Default/press.html.twig' %}

    {% include 'AppBundle::Default/whySoSure.html.twig' %}

    {% include 'AppBundle::Default/saveMoney.html.twig' %}

    {% include 'AppBundle::Default/fasterClaims.html.twig' %}

    {% include 'AppBundle::Default/feedbackQuotes.html.twig' %}

    <section class="footer-cta">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 text-left">
                    <h2>Ready for better phone insurance?</h2>
                    <p class="lead">You can't always have better in life, but you can have better phone insurance.</p>
                </div>
                <div class="col-lg-2 text-center">
                    <a href="mailto:hello@wearesosure.com" class="btn btn-info open-intercom"><i class="fa fa-comments"></i> Chat with us</a>
                </div>
                <div class="col-lg-2 text-center">
                    <a class="btn btn-primary" id="get-quote-btn">Get a quote</a>
                </div>
            </div>
        </div>
    </section>


    {% include 'AppBundle::Default/partnership.html.twig' %}

    {# Page Modals #}

    {% include 'AppBundle::Default/modalVideo.html.twig' %}

    {# {% include 'AppBundle::Default/modalQuote.html.twig' %}     #}

    {# End Page Modals #}

{% endblock %}
