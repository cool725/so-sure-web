                    {% if not print and stats['accounts-reward-pot-liability-sosure'] is defined %}
                        [£{{ stats['accounts-reward-pot-liability-sosure'] }} cached]
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td width="{{ indent_width }}"></td>
                <td>Annual Run Rate Premium</td>
                <td>
                    £{{ paymentTotals.totalRunRate|number_format(0, '.', ',') }}
                    {% if not print and stats['accounts-annual-run-rate'] is defined %}
                        [£{{ stats['accounts-annual-run-rate'] }} cached]
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
