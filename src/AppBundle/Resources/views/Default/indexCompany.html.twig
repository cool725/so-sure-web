                        <div class="with-errors">{{ form_errors(lead_form.phone) }}</div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md form-group">
                        {{ form_label(lead_form.email, 'Email', { 'label_attr': {'class': 'sr-only'}}) }}
                        {{ form_widget(lead_form.email, { 'attr': {'class': 'form-control form-control-white', 'placeholder': 'Email'}}) }}
                        <div class="with-errors">{{ form_errors(lead_form.email) }}</div>
                    </div>
                    <div class="col-md form-group">
