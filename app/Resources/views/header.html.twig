<meta charset="UTF-8" />

<!-- Mobile Specific Metas
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Favicon
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<link rel="icon" type="image/png" href="{{ cdn_url }}/images/favicon.png">
<link rel="shortcut icon" href="{{ cdn_url }}/images/favicons/favicon.ico" type="image/x-icon" />
<link rel="apple-touch-icon" sizes="57x57" href="{{ cdn_url }}/images/favicons/apple-touch-icon-57x57.png">
<link rel="apple-touch-icon" sizes="60x60" href="{{ cdn_url }}/images/favicons/apple-touch-icon-60x60.png">
<link rel="apple-touch-icon" sizes="72x72" href="{{ cdn_url }}/images/favicons/apple-touch-icon-72x72.png">
<link rel="apple-touch-icon" sizes="76x76" href="{{ cdn_url }}/images/favicons/apple-touch-icon-76x76.png">
<link rel="apple-touch-icon" sizes="114x114" href="{{ cdn_url }}/images/favicons/apple-touch-icon-114x114.png">
<link rel="apple-touch-icon" sizes="120x120" href="{{ cdn_url }}/images/favicons/apple-touch-icon-120x120.png">
<link rel="apple-touch-icon" sizes="144x144" href="{{ cdn_url }}/images/favicons/apple-touch-icon-144x144.png">
<link rel="apple-touch-icon" sizes="152x152" href="{{ cdn_url }}/images/favicons/apple-touch-icon-152x152.png">
<link rel="apple-touch-icon" sizes="180x180" href="{{ cdn_url }}/images/favicons/apple-touch-icon-180x180.png">
<link rel="icon" type="image/png" href="{{ cdn_url }}/images/favicons/favicon-16x16.png" sizes="16x16">
<link rel="icon" type="image/png" href="{{ cdn_url }}/images/favicons/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="{{ cdn_url }}/images/favicons/favicon-96x96.png" sizes="96x96">
<link rel="icon" type="image/png" href="{{ cdn_url }}/images/favicons/android-chrome-192x192.png" sizes="192x192">
<meta name="msapplication-square70x70logo" content="{{ cdn_url }}/images/favicons/smalltile.png" />
<meta name="msapplication-square150x150logo" content="{{ cdn_url }}/images/favicons/mediumtile.png" />
<meta name="msapplication-wide310x150logo" content="{{ cdn_url }}/images/favicons/widetile.png" />
<meta name="msapplication-square310x310logo" content="{{ cdn_url }}/images/favicons/largetile.png" />

<!-- FB Open Graph Tags
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<meta property="fb:app_id" content="{{ fb_appid }}" />
<meta property="og:url" content="{{ app.request.uri }}" />
<meta property="og:type" content="website" />
<meta property="og:description" content="Everyone hates insurance. That’s why we created so-sure - social mobile phone insurance that’s better & up to 80% cheaper when you connect with friends and none of you claim." />
{% if og_title is defined %}
  <meta property="og:title" content="{{ og_title }}" />
{% else %}
  <meta property="og:title" content="Welcome to Social Insurance" />
{% endif %}
{% if og_image is defined %}
  <meta property="og:image" content="{{ og_image }}" />
{% else %}
  <meta property="og:image" content="{{ cdn_url }}/images/so-sure-welcome.png" />
{% endif %}

<!-- Twitter Tags
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@wearesosure" />

<!-- Font
–––––––––––––––––––––––––––––––––––––––––––––––––– -->
<link rel="application/x-font-woff" href="/fonts/AvenirLTStd-Book.woff">
<link rel="application/x-font-woff" href="/fonts/AvenirLTStd-Heavy.woff">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
{% if include_emoji is defined and include_emoji == 1 %}
<link href="https://afeld.github.io/emoji-css/emoji.css" rel="stylesheet">
{% endif %}
