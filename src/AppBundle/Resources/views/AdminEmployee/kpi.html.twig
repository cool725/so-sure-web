                        <tr>
                            <td>Run Rate Premium [KPI: 12]</td>
                            {% for week in weeks %}
                                <td>Â£{{ week.total.data['totalRunRate'] |number_format(2, '.', ',') }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Active Policies [KPI: 14]</td>
                            {% for week in weeks %}
                                {# as upgrades will be included in new and taken off ending is the same as if using adjUpgrade on both #}
                                <td>{{ (week.total.data['newPolicies'] - week.total.data['endingEndingPolicies']) }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Percentage of FNOL within 30days policy inception [KPI: 68]</td>
                            {% for week in weeks %}
                                <td>{{ week.period.data['fnol30Claims']|number_format(1, '.', ',') }}%</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Overall Approved Claim Rate- rolling 12mo [KPI: 69] <i class="fa fa-info" title="12 month FNOL that were approved / current active policies"></i></td>
                            {% for week in weeks %}
                                <td>{%  if (week.total.data['newPolicies'] - week.total.data['endingEndingPolicies']) != 0  %}
                                        {{ (100 * week.period.data['rolling-yearly-claims-totals'] / (week.total.data['newPolicies'] - week.total.data['endingEndingPolicies']))|number_format(1, '.', ',') }}%
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Average cost of claims in month [KPI: 70]</td>
                            {% for week in weeks %}
                                <td></td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td># of User aquired [KPI: 75]</td>
                            {% for week in weeks %}
                                <td>{{ week.period.data['newUsers'] }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td># of New Policyholders [KPI: 77]</td>
                            {% for week in weeks %}
                                <td></td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>New Policies [KPI: 81] (excludes upgrades & renewals)</td>
                            {% for week in weeks %}
                                <td>{{ week.period.data['newPoliciesAdjUpgradeRenewals'] }}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Policy Upgrades [KPI: 83]
                            </td>
