{% extends 'AppBundle:Email:base.html.twig' %}
{% import "AppBundle:Email:macros.html.twig" as macros %}
{% block title %}Policy Payment Request from {{ multiPay.payee.name }}{% endblock %}
{% block body %}
	{{ macros.start_table() }}
		<h1>
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		</h1>
		<div style="font-size: 14px; text-align: left;">
		   <!--?xml version="1.0" encoding="UTF-8" standalone="no"?-->
		   <div style="font-size: 14px; text-align: left;"><span style="font-family:arial,helvetica neue,helvetica,sans-serif">
				{{ multiPay.payee.name }} has requested you to pay for their policy.
				<br><br>
				The premium is £{{ multiPay.policy.premium.monthlyPremiumPrice|number_format(2, '.', ',') }} / month or £{{ multiPay.policy.premium.yearlyPremiumPrice|number_format(2, '.', ',') }} for the year.
				<br><br>
				You can open your so-sure App to Accept or Reject the request.
				<br><br>
			    If you have any questions, please don't hesitate to <a href="mailto:support@wearesosure.com?subject=I%20have%20a%20question" target="_blank"><span style="color:#3399ff">contact us</span></a>.
		   </div>
		</div>
	{{ macros.end_table() }}
{% endblock %}
