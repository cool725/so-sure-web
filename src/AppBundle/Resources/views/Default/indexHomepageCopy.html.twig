{% extends 'base.html.twig' %}

{# Set vars #}
{% set new_stylesheet = 1 %}
{% set new_footer = 1 %}
{% set homepage = 1 %}

{% block title %}so-sure - Welcome to Social Insurance{% endblock %}
{% block meta %}
    <meta name="description" content="Social mobile phone insurance that's better and up to 80% cheaper when you connect with friends and don't claim. Download our app now to see how much you could save."/>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/*.css'
    'components/animate.css/animate.min.css'
    '@AppBundle/Resources/public/sass/page/homepage.scss'
 %}<link rel="stylesheet" href="{{ asset_url }}">{% endstylesheets %}
{% endblock %}

{% block body %}

    {# Hero #}
    <section class="homepage--hero homepage--hero-background">
        <h1 class="homepage--hero-h1">Mobile insurance <br> designed for you</h1>
        <p class="lead">Here protecting you when you make a claim, and rewarding you when you don't.</p>
        {# Phone Search #}
        {% if device_category() == 'Mobile' %}
            {% set select_template = 'AppBundle:Default:selectPhoneMakeDropdown' %}
        {% else %}
            {% set select_template = 'AppBundle:Default:selectPhoneMakeSearch' %}
        {% endif %}
        {% if phone is defined and phone %}
            {{ render(controller(select_template, {
                'type': 'homepage-sticky',
                'id': phone.id
            })) }}
        {% else %}
            {{ render(controller(select_template, {
                'type': 'homepage-sticky',
            })) }}
        {% endif %}
        {# End Phone Search #}

        <div id="hero-character_1"
             class="homepage--hero__character">
            <div class="homepage--hero__tooltip animated tada"
                 data-content="Accidental damage cover, including cracked screen and water damage"></div>
        </div>
        <div id="hero-character_2"
             class="homepage--hero__character">
            <div class="homepage--hero__tooltip"
                 data-content="Worldwide travel cover for trips not exceeding 90 days"></div>
        </div>
        <div id="hero-character_3_and_4"
             class="homepage--hero__character clearfix">
            <div class="left">
                <div class="homepage--hero__tooltip"
                 data-content="Refurbished and second-hand device cover, for phones up to 3 years old"></div>
            </div>
            <div class="right">
                <div class="homepage--hero__tooltip"
                 data-content="Out of warranty breakdown cover"></div>
            </div>
        </div>
        <div id="hero-character_5_and_6"
             class="homepage--hero__character clearfix">
            <div class="left">
                <div class="homepage--hero__tooltip"
                 data-content="Theft and Loss cover as standard"></div>
            </div>
            <div class="right">
                <div class="homepage--hero__tooltip"
                 data-content="Unauthorised network charges cover (up to £1000 inc. VAT)"></div>
            </div>
        </div>
        <div id="hero-character_7"
             class="homepage--hero__character">
            <div class="homepage--hero__tooltip homepage--hero__tooltip__reward"
                 data-content="Next day phone replacement/repair or up to 80% of your money back when you and your friends don't claim"></div>
             </div>
        <div id="hero-character_8"
             class="homepage--hero__character">
            <div class="homepage--hero__tooltip"
                 data-content="Accessories cover (up to £100 inc. VAT) for theft and loss claim"></div>
        </div>
    </section>

    {# Press #}
    <section class="homepage__press">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 text-center">
                    <ul class="list-inline text-center">
                        <li><img src="{{ cdn_url }}/images/press/ebay_so-sure_defaqto.svg" alt="Defaqto" title="Defaqto" class="homepage__press_defaqto"></li>
                        <li><img src="{{ cdn_url }}/images/press/ebay_so-sure_trustpilot.svg" alt="TrustPilot" title="TrustPilot" class="homepage__press_trustpilot"></li>
                        <li><img src="{{ cdn_url }}/images/press/ebay_so-sure_money.svg" alt="Money.co.uk" title="Money.co.uk" class="homepage__press_money"></li>
                        <li><img src="{{ cdn_url }}/images/press/ebay_so-sure_go-compare.svg" alt="Go Compare" title="Go Compare" class="homepage__press_gocompare"></li>
                        <li><img src="{{ cdn_url }}/images/press/ebay_so-sure_theguardian.svg" alt="The Guardian" title="The Guardian" class="homepage__press_theguardian"></li>
                        <li><img src="{{ cdn_url }}/images/press/ebay_so-sure_financial-times.svg" alt="Financial Times" title="Financial Times" class="homepage__press_financialtimes"></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    {# What is so-sure? #}
    <section class="section--pad homepage--what-is-so-sure">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    {# <h2 class="h1 text-center h-nom">Who is so-sure?</h2> #}
                    <p class="big-text text-center">We’re a new kind of insurer – an insurer that’s focused on people, not profits. We saw an opportunity to make insurance better. So that’s what we did. We provide mobile insurance that’s simple, reasonable and hassle-free, so you can get back to worrying about the big stuff.</p>
                </div>
            </div>
        </div>
    </section>

    <div class="curved-background curved-background__bg-blue hidden-xs">
        <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2000 200" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="Artboard" fill="#ffffff">
                    <path d="M0,0 L2000,0 L2000,139.921588 C1890.08746,181.703317 1753.08746,201.692115 1589,199.887983 C1424.91254,198.083852 1258.91254,174.763587 1091,129.927189 C918.666667,89.9495926 740,69.9607942 555,69.9607942 C370,69.9607942 185,113.269857 0,199.887983 L0,0 Z" id="Rectangle" transform="translate(1000.000000, 100.000000) scale(-1, 1) translate(-1000.000000, -100.000000) "></path>
                </g>
            </g>
        </svg>
    </div>

    {# Why we're better than the rest #}
    <section class="section--pad homepage--why-we-are-better">
        <div class="container">
            <div class="row">
                <div class="col-md-7 col-md-push-5">
                    <h2 class="h1">We do things differently</h2>
                    <p class="lead">We've designed our insurance with you in mind. That's why we’ve created a product that looks after you when bad stuff happens but rewards you when you’re being careful.</p>
                    <p class="lead">If you make a claim, our friendly team will aim to get you back up and running with a replacement phone within 24-72 hours.</p>
                    <p class="lead">But if you don’t find yourself making a claim, we could end up returning 80% of your premium each year through our reward pot. We call this social insurance, and we believe it’s the future.</p>
                </div>
                <div class="col-md-5 col-md-pull-7">
                    <img src="{{ cdn_url }}/images/homepage/so-sure_app_web.png" class="img-center img-app">
                </div>
            </div>
        </div>
    </section>

    <div class="curved-background hidden-xs">
        <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2000 200" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="Artboard" fill="#d6ebff">
                    <path d="M0,0 L2000,0 L2000,139.921588 C1890.08746,181.703317 1753.08746,201.692115 1589,199.887983 C1424.91254,198.083852 1258.91254,174.763587 1091,129.927189 C918.666667,89.9495926 740,69.9607942 555,69.9607942 C370,69.9607942 185,113.269857 0,199.887983 L0,0 Z" id="Rectangle" transform="translate(1000.000000, 100.000000) scale(-1, 1) translate(-1000.000000, -100.000000) "></path>
                </g>
            </g>
        </svg>
    </div>

    {# Cover Details #}
    <section class="section--pad homepage--cover-details">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <h2 class="text-left h2c">Come rain, shine or cracked screen, we’re here for you and your social circle</h2>
                    <p class="lead text-left">In just a few clicks, you’ll be instantly covered for loss, theft, accidental damage, out-of-warranty breakdowns and even international travel. And unlike other insurers, we cover phones that are up to three years old.</p>
                </div>
                <div class="col-md-7 text-left">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="media">
                                <div class="media-left media-middle">
                                    <img src="{{ cdn_url }}/images/homepage/so-sure_theft.svg" alt="Theft" width="100px">
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="media-heading h-light">Theft</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="media">
                                <div class="media-left media-middle">
                                    <img src="{{ cdn_url }}/images/homepage/so-sure_loss.svg" alt="Loss" width="100px">
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="media-heading h-light">Loss</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="media">
                                <div class="media-left media-middle">
                                    <img src="{{ cdn_url }}/images/homepage/so-sure_accidental_damage.svg" alt="Accidental Damage" width="100px">
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="media-heading h-light">Accidental Damage</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="media">
                                <div class="media-left media-middle">
                                    <img src="{{ cdn_url }}/images/homepage/so-sure_out_of_warranty_breakdown.svg" alt="Out of Warranty Breakdown" width="100px">
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="media-heading h-light">Out of Warranty Breakdown</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="media">
                                <div class="media-left media-middle">
                                    <img src="{{ cdn_url }}/images/homepage/so-sure_unauthorised_network_charges.svg" alt="Unauthorised Network Charges" width="100px">
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="media-heading h-light">Unauthorised Network Charges</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="media">
                                <div class="media-left media-middle">
                                    <img src="{{ cdn_url }}/images/homepage/so-sure_accessories.svg" alt="accessories" width="100px">
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="media-heading h-light">Accessories</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Travel When Abroad #}
    <section class="homepage--when-you-travel">
        <div class="cloud cloud--top">
            <img src="{{ cdn_url }}/images/homepage/so-sure_cloud_top_expanded.svg"
                 alt="cloud top"
                 align="top">
        </div>
        <div class="container">
            <h2 class="h1">Including When You Travel Abroad</h2>
            <p class="lead">We have your back whilst you're on the road (as long as your trip does not exceed 90 days)</p>
            <img src="data:image/png;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs="
                 data-src="{{ cdn_url }}/images/homepage/so-sure_airways.svg"
                 alt="so-sure - airways"
                 class="img-responsive img-responsive--center so-sure_airways lozad">
        </div>
        <div class="cloud cloud--bottom">
            <img src="{{ cdn_url }}/images/homepage/so-sure_cloud_bottom_expanded.svg"
                 alt="cloud bottom"
                 align="bottom">
        </div>
    </section>


    {# What we don't cover #}
    <section class="homepage--what-we-dont-cover">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2>What We Don't Cover</h2>
                    <ul class="list-unstyled">
                        <li class="h4">
                            Excess:
                            <ul class="list-unstyled">
                                <li class="h5 h-light"><strong class="h4"><i class="fa fa-question-circle" data-container="body" data-toggle="popover" data-placement="top" data-content="pic-sure is our free app-based process to prove your phone is in good working condition and your screen is not cracked" aria-hidden="true"></i> pic-sure validated:</strong> £70 for Theft/Loss and £50 for Accidental Damage/Breakdown.</li>
                                <li class="h5 h-light"><strong class="h4">otherwise:</strong> £150 for Theft/Loss/Accidental Damage/Breakdown without pic-sure</li>
                            </ul>
                        </li>
                        <li class="h4">
                            Putting your phone at risk:
                            <ul class="list-unstyled">
                                <li class="h5 h-light">Theft, Loss, Accidental Damage or Breakdown where you have knowingly put your phone at risk</li>
                            </ul>
                        </li>
                        <li class="h4">
                            Multiple Theft/Loss Claims:
                            <ul class="list-unstyled">
                                <li class="h5 h-light">3+ claims for Loss and/or Theft in any policy year</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="curved-background curved-background__bg-blue hidden-xs">
        <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2000 200" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="Artboard" fill="#ffffff">
                    <path d="M0,0 L2000,0 L2000,139.921588 C1890.08746,181.703317 1753.08746,201.692115 1589,199.887983 C1424.91254,198.083852 1258.91254,174.763587 1091,129.927189 C918.666667,89.9495926 740,69.9607942 555,69.9607942 C370,69.9607942 185,113.269857 0,199.887983 L0,0 Z" id="Rectangle" transform="translate(1000.000000, 100.000000) scale(-1, 1) translate(-1000.000000, -100.000000) "></path>
                </g>
            </g>
        </svg>
    </div>

    {% include 'AppBundle::Default/_sectionRewardPot.html.twig' %}

    <div class="curved-background hidden-xs">
        <svg preserveAspectRatio="xMinYMin meet" viewBox="0 0 2000 200" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
            <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="Artboard" fill="#d6ebff">
                    <path d="M0,0 L2000,0 L2000,139.921588 C1890.08746,181.703317 1753.08746,201.692115 1589,199.887983 C1424.91254,198.083852 1258.91254,174.763587 1091,129.927189 C918.666667,89.9495926 740,69.9607942 555,69.9607942 C370,69.9607942 185,113.269857 0,199.887983 L0,0 Z" id="Rectangle" transform="translate(1000.000000, 100.000000) scale(-1, 1) translate(-1000.000000, -100.000000) "></path>
                </g>
            </g>
        </svg>
    </div>

    {# Claims procss #}
    <section class="section--pad homepage--claims-process">
        <div class="container">
            <h2 class="h1 text-blue">Our hassle-free claims process</h2>
            <p class="lead">When something bad happens to your phone:</p>
            <div class="row">
                <div class="col-md-4">
                    <span class="large-no large-no--arrow">1</span>
                    <h4 class="h3 text-blue">Contact Claims Team</h4>
                    <p class="text-left">Let us know what happened. You can do this by <a href="{{ path('claim') }}" class="text-nowrap">filling in this form</a>, or calling our claims team on 0344 856 0852 <small>(local rates apply)</small></p>
                </div>
                <div class="col-md-4">
                    <span class="large-no large-no--arrow">2</span>
                    <h4 class="h3 text-blue">Review Claim</h4>
                    <p class="text-left">Our UK based claims team will review your claim and reach out with a request for any further details or documents (if necessary). We aim to do this within a matter of hours during UK business hours.</p>
                </div>
                <div class="col-md-4">
                    <span class="large-no">3</span>
                    <h4 class="h3 text-blue">Approve Claim</h4>
                    <p class="text-left">Once your claim is approved, we take your excess payment over the phone and aim to get a replacement phone {% if replacement is defined and replacement == 'seventytwo-hours' %}within the 72 hours{% else %}in the next working day{% endif %}. If you prefer to have your phone repaired, it may take more time.</p>
                </div>
            </div>
        </div>
    </section>

    {% include 'AppBundle::Default/_sectionComparisonAlt.html.twig' %}
    {% include 'AppBundle::Default/_sectionFeedback.html.twig' %}

    {# Instant Quote #}
    <section class="homepage--instant-quote">
        <div class="container">
            <h2 class="text-center h1">Get Your Instant Quote</h2>
            {# Phone Search #}
            {% if phone is defined and phone %}
                {{ render(controller('AppBundle:Default:selectPhoneMakeSearch', {
                    'type': 'footer',
                    'id': phone.id
                })) }}
            {% else %}
                {{ render(controller('AppBundle:Default:selectPhoneMakeSearch', {
                    'type': 'footer',
                })) }}
            {% endif %}
            {# End Phone Search #}
            <img src="data:image/png;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" data-src="{{ cdn_url }}/images/homepage/so-sure_form_rocket.svg"
                 class="img-responsive form-rocket lozad" alt="so-sure - rocket">
        </div>
    </section>

    {# Page Modals #}
    {% include 'AppBundle::Default/_coverModals.html.twig' %}
    {# End Page Modals #}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'components/lozad/lozad.min.js'
    'components/dot/doT.min.js'
    'components/corejs-typeahead/typeahead.bundle.min.js'
    'components/fuse.js/fuse.min.js'
    '@AppBundle/Resources/public/js/Default/images.js'
    '@AppBundle/Resources/public/js/Default/homepage.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMakeSearch.js'
    '@AppBundle/Resources/public/js/Default/selectPhoneMakeDropdown.js'
 %}
    <script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endblock %}

